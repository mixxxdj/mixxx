<!--
Description:
  Options for the sampler rack
-->
<Template>
  <WidgetGroup>
  <ObjectName></ObjectName>
  <SizePolicy>me,f</SizePolicy>
  <Layout>stacked</Layout>
  <Children>
    <!-- translucent cover when Library is maximized -->
    <Template src="skins:LateNight/helpers/skin_settings_cover.xml">
      <SetVariable name="Setting">[Skin],show_maximized_library</SetVariable>
    </Template>

    <WidgetGroup>
      <SizePolicy>me,min</SizePolicy>
      <Layout>vertical</Layout>
      <Children>
        <WidgetGroup>
          <Layout>horizontal</Layout>
          <Size>180min,1min</Size>
          <Children>
            <Template src="skins:LateNight/helpers/skin_settings_labelbutton_2state.xml">
              <SetVariable name="TooltipId">show_samplers</SetVariable>
              <SetVariable name="Text">Samplers </SetVariable>
              <SetVariable name="Setting">[Skin],show_samplers</SetVariable>
              <SetVariable name="Width">115f</SetVariable>
            </Template>

            <WidgetGroup>
              <SizePolicy>me,f</SizePolicy>
              <Layout>stacked</Layout>
              <Children>
                <!-- translucent cover when samplers are hidden -->
                <Template src="skins:LateNight/helpers/skin_settings_cover_inverted.xml">
                  <SetVariable name="Setting">[Skin],show_samplers</SetVariable>
                </Template>

                <WidgetGroup>
                  <Layout>horizontal</Layout>
                  <Size>0me,1min</Size>
                  <Children>
                    <Template src="skins:LateNight/helpers/skin_settings_numToggle_header.xml">
                      <SetVariable name="Text">4</SetVariable>
                      <SetVariable name="Setting">[LateNight],show_4samplers</SetVariable>
                      <SetVariable name="IsEqual">1</SetVariable>
                      <SetVariable name="Width">25f</SetVariable>
                    </Template>
                    <Template src="skins:LateNight/helpers/skin_settings_numToggle_header.xml">
                      <SetVariable name="Text">8</SetVariable>
                      <SetVariable name="Setting">[LateNight],show_8samplers</SetVariable>
                      <SetVariable name="IsEqual">1</SetVariable>
                      <SetVariable name="Width">25f</SetVariable>
                    </Template>
                    <Template src="skins:LateNight/helpers/skin_settings_numToggle_header.xml">
                      <SetVariable name="Text">16</SetVariable>
                      <SetVariable name="Setting">[LateNight],show_16samplers</SetVariable>
                      <SetVariable name="IsEqual">1</SetVariable>
                      <SetVariable name="Width">30f</SetVariable>
                    </Template>
                    <WidgetGroup><Size>0me,0f</Size></WidgetGroup>
                  </Children>
                </WidgetGroup>
              </Children>
            </WidgetGroup>

          </Children>
        </WidgetGroup>

        <WidgetGroup>
          <ObjectName>SkinSettingsCategory</ObjectName>
          <SizePolicy>me,f</SizePolicy>
          <Layout>stacked</Layout>
          <Children>
            <!-- translucent cover when samplers are hidden -->
            <Template src="skins:LateNight/helpers/skin_settings_cover_inverted.xml">
              <SetVariable name="Setting">[Skin],show_samplers</SetVariable>
            </Template>

            <WidgetGroup>
              <Layout>vertical</Layout>
              <SizePolicy>me,min</SizePolicy>
              <Children>
                <Template src="skins:LateNight/helpers/skin_settings_button_2state.xml">
                  <SetVariable name="Text">Fx controls</SetVariable>
                  <SetVariable name="Setting">[Skin],show_sampler_fx</SetVariable>
                </Template>

                <WidgetGroup>
                  <ObjectName>SamplerLoadSaveBox</ObjectName>
                  <Layout>horizontal</Layout>
                  <Size>180min,1min</Size>
                  <Children>
                    <PushButton>
                      <TooltipId>LoadSamplerBank</TooltipId>
                      <ObjectName>SkinSettingsButton</ObjectName>
                      <Size>35f,18f</Size>
                      <NumberStates>1</NumberStates>
                      <State>
                        <Number>0</Number>
                        <Text> Load </Text>
                        <Alignment>left</Alignment>
                      </State>
                      <Connection>
                        <ConfigKey>[Sampler],LoadSamplerBank</ConfigKey>
                        <ButtonState>LeftButton</ButtonState>
                      </Connection>
                    </PushButton>
                    <Label>
                      <TooltipId>SaveSamplerBank</TooltipId>
                      <ObjectName>SkinSettingsText</ObjectName>
                      <Size>6min,18f</Size>
                      <Text>/</Text>
                      <Alignment>center</Alignment>
                    </Label>
                    <PushButton>
                      <TooltipId>SaveSamplerBank</TooltipId>
                      <ObjectName>SkinSettingsButton</ObjectName>
                      <Size>35f,18f</Size>
                      <NumberStates>1</NumberStates>
                      <State>
                        <Number>0</Number>
                        <Text> Save </Text>
                        <Alignment>left</Alignment>
                      </State>
                      <Connection>
                        <ConfigKey>[Sampler],SaveSamplerBank</ConfigKey>
                        <ButtonState>LeftButton</ButtonState>
                      </Connection>
                    </PushButton>
                    <Label>
                      <TooltipId>SaveSamplerBank</TooltipId>
                      <ObjectName>SkinSettingsText</ObjectName>
                      <Size>140min,18f</Size>
                      <Text>Sampler Bank</Text>
                      <Alignment>left</Alignment>
                    </Label>
                  </Children>
                </WidgetGroup>
              </Children>
            </WidgetGroup>

          </Children>
        </WidgetGroup>
      </Children>
    </WidgetGroup>
  </Children>
</WidgetGroup>
</Template>
