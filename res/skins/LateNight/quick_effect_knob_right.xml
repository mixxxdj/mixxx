<!DOCTYPE template>
<Template>
  <SetVariable name="QuickEffectGroup">[QuickEffectRack1_<Variable name="group"/>]</SetVariable>
  <SetVariable name="QuickEffect">[QuickEffectRack1_<Variable name="group"/>_Effect1]</SetVariable>
  <WidgetGroup>
    <Layout>vertical</Layout>
    <SizePolicy>min,min</SizePolicy>
    <Children>

      <WidgetGroup><!-- Kill button + knob -->
        <Layout>horizontal</Layout>
        <SizePolicy>min,min</SizePolicy>
        <Children>

          <WidgetGroup>
            <Layout>horizontal</Layout>
            <SizePolicy>me,min</SizePolicy>
            <Children>
              <Template src="skin:knob_textless.xml">
                <SetVariable name="Size">40f,34f</SetVariable>
                <SetVariable name="Color">green</SetVariable>
                <SetVariable name="group"><Variable name="QuickEffectGroup"/></SetVariable>
                <SetVariable name="control">super1</SetVariable>
                <SetVariable name="TooltipId">QuickEffectRack_super1</SetVariable>
              </Template>
            </Children>
          </WidgetGroup>

          <WidgetGroup>
            <ObjectName>KillButtonRight</ObjectName>
            <Layout>horizontal</Layout>
            <SizePolicy>min,min</SizePolicy>
            <MinimumSize>22,30</MinimumSize>
            <Children>
              <Template src="skin:button_2state.xml">
                <SetVariable name="TooltipId">QuickEffectRack_enabled</SetVariable>
                <SetVariable name="icon">quickEffect</SetVariable>
                <SetVariable name="Size">18f,18f</SetVariable>
                <SetVariable name="ConfigKey"><Variable name="QuickEffect"/>,enabled</SetVariable>
              </Template>
            </Children>
            <Connection>
              <ConfigKey>[Skin],show_eq_kill_buttons</ConfigKey>
              <BindProperty>visible</BindProperty>
            </Connection>
          </WidgetGroup>

        </Children>
        <Connection>
          <ConfigKey><Variable name="QuickEffect"/>,loaded</ConfigKey>
          <BindProperty>visible</BindProperty>
        </Connection>
      </WidgetGroup><!-- /Kill button + knob -->

      <WidgetGroup>
        <Layout>horizontal</Layout>
        <SizePolicy>me,f</SizePolicy>
        <Children>
          <EffectName>
            <ObjectName>KnobLabel</ObjectName>
            <MinimumSize>40,12</MinimumSize>
            <MaximumSize>62,12</MaximumSize>
            <SizePolicy>me,f</SizePolicy>
            <Elide>right</Elide>
            <EffectRackGroup>[QuickEffectRack1]</EffectRackGroup>
            <EffectUnitGroup><Variable name="QuickEffectGroup"/></EffectUnitGroup>
            <Effect>1</Effect>
          </EffectName>

          <WidgetGroup>
            <Size>0min,0min</Size>
            <Children/>
          </WidgetGroup>
        </Children>
        <Connection>
          <ConfigKey><Variable name="QuickEffect"/>,loaded</ConfigKey>
          <BindProperty>visible</BindProperty>
        </Connection>
      </WidgetGroup>
    </Children>
    <Connection>
      <ConfigKey>[Skin],show_eq_knobs</ConfigKey>
      <BindProperty>visible</BindProperty>
    </Connection>
  </WidgetGroup>
</Template>
