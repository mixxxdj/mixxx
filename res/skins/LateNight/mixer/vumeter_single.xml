<!--
  Description:
    A mono meter for all channel VU levels

  Variables:
    Group
    ChannelType   channel | sampler | microphone | ...
    StyleScheme
    VuSize        deck | sampler | small
    VuColor       dark | light
            In PaleMoon theme there are different Vu meters:
            * in mixer: dark BackPath
            * in between compact decks: light BackPath
-->
<Template>
  <WidgetGroup>
    <ObjectName>VuMeterBox</ObjectName>
    <Layout>vertical</Layout>
    <SizePolicy>min,min</SizePolicy>
    <Children>
      <StatusLight>
        <TooltipId><Variable name="ChannelType"/>_peak_indicator</TooltipId>
        <PathBack>skins:LateNight/<Variable name="StyleScheme"/>/style/vu_<Variable name="VuSize"/>_clipping_bg_<Variable name="VuColor"/>.png</PathBack>
        <PathStatusLight>skins:LateNight/<Variable name="StyleScheme"/>/style/vu_<Variable name="VuSize"/>_clipping_active.png</PathStatusLight>
        <Connection>
          <ConfigKey><Variable name="Group"/>,peak_indicator</ConfigKey>
        </Connection>
      </StatusLight>
      <VuMeter>
        <TooltipId><Variable name="ChannelType"/>_VuMeter</TooltipId>
        <PathBack>skins:LateNight/<Variable name="StyleScheme"/>/style/vu_<Variable name="VuSize"/>_level_bg_<Variable name="VuColor"/>.png</PathBack>
        <PathVu>skins:LateNight/<Variable name="StyleScheme"/>/style/vu_<Variable name="VuSize"/>_level_active.png</PathVu>
        <Horizontal>false</Horizontal>
        <PeakHoldSize>4</PeakHoldSize>
        <PeakHoldTime>500</PeakHoldTime>
        <PeakFallTime>10</PeakFallTime>
        <PeakFallStep>2</PeakFallStep>
        <Connection>
          <ConfigKey><Variable name="Group"/>,vu_meter</ConfigKey>
        </Connection>
      </VuMeter>
    </Children>
  </WidgetGroup>
</Template>
