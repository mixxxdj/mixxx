<!--
  Description:
    A stereo meter for the Master VU level

  Variables:
    Group
    ChannelType   channel | sampler | microphone | ...
    StyleScheme
    VuSize        deck | sampler | small
    VuColor       dark | light
            (in PaleMoon theme the Vu meters are different
             in mixer or 'standalone' in between compact decks)
-->
<Template>
  <WidgetGroup>
    <ObjectName>VuMeterBoxMaster</ObjectName>
    <Layout>horizontal</Layout>
    <SizePolicy>min,min</SizePolicy>
    <Children>
      <!-- Left -->
      <WidgetGroup>
        <ObjectName>VuMeterBoxMasterSingle</ObjectName>
        <Layout>vertical</Layout>
        <SizePolicy>min,min</SizePolicy>
        <Children>
          <StatusLight>
            <TooltipId>master_PeakIndicatorL</TooltipId>
            <PathBack>skin:/<Variable name="StyleScheme"/>/style/vu_deck_clipping_bg_<Variable name="VuColor"/>.png</PathBack>
            <PathStatusLight>skin:/<Variable name="StyleScheme"/>/style/vu_deck_clipping_active.png</PathStatusLight>
            <Connection>
              <ConfigKey>[Master],PeakIndicatorL</ConfigKey>
            </Connection>
          </StatusLight>
          <VuMeter>
            <TooltipId>master_VuMeterL</TooltipId>
            <PathBack>skin:/<Variable name="StyleScheme"/>/style/vu_deck_level_bg_<Variable name="VuColor"/>.png</PathBack>
            <PathVu>skin:/<Variable name="StyleScheme"/>/style/vu_deck_level_active.png</PathVu>
            <Horizontal>false</Horizontal>
            <PeakHoldSize>5</PeakHoldSize>
            <PeakHoldTime>500</PeakHoldTime>
            <PeakFallTime>50</PeakFallTime>
            <PeakFallStep>2</PeakFallStep>
            <Connection>
              <ConfigKey>[Master],VuMeterL</ConfigKey>
            </Connection>
          </VuMeter>
        </Children>
      </WidgetGroup><!-- VuMeterBoxMasterSingle -->
      <!-- Right -->
      <WidgetGroup>
        <ObjectName>VuMeterBoxMasterSingle</ObjectName>
        <Layout>vertical</Layout>
        <SizePolicy>min,min</SizePolicy>
        <Children>
          <StatusLight>
            <TooltipId>master_PeakIndicatorR</TooltipId>
            <PathBack>skin:/<Variable name="StyleScheme"/>/style/vu_deck_clipping_bg_<Variable name="VuColor"/>.png</PathBack>
            <PathStatusLight>skin:/<Variable name="StyleScheme"/>/style/vu_deck_clipping_active.png</PathStatusLight>
            <Connection>
              <ConfigKey>[Master],PeakIndicatorR</ConfigKey>
            </Connection>
          </StatusLight>
          <VuMeter>
            <TooltipId>master_VuMeterR</TooltipId>
            <PathBack>skin:/<Variable name="StyleScheme"/>/style/vu_deck_level_bg_<Variable name="VuColor"/>.png</PathBack>
            <PathVu>skin:/<Variable name="StyleScheme"/>/style/vu_deck_level_active.png</PathVu>
            <Horizontal>false</Horizontal>
            <PeakHoldSize>5</PeakHoldSize>
            <PeakHoldTime>500</PeakHoldTime>
            <PeakFallTime>50</PeakFallTime>
            <PeakFallStep>2</PeakFallStep>
            <Connection>
              <ConfigKey>[Master],VuMeterR</ConfigKey>
            </Connection>
          </VuMeter>
        </Children>
      </WidgetGroup><!-- VuMeterBoxMasterSingle -->
      <!-- Right -->
    </Children>
  </WidgetGroup><!-- VuMeterBoxMaster -->
</Template>
