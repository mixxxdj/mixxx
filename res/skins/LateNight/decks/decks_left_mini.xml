<Template>
  <SetVariable name="Type">deck</SetVariable>
  <WidgetGroup>
    <ObjectName>DecksLeft</ObjectName>
    <Layout>vertical</Layout>
    <SizePolicy>me,min</SizePolicy>
    <Children>

      <SingletonContainer>
        <ObjectName>Deck1_Mini</ObjectName>
      </SingletonContainer>

      <WidgetGroup>
        <Layout>horizontal</Layout>
        <SizePolicy>me,min</SizePolicy>
        <Children>
          <SingletonContainer>
            <ObjectName>Deck3_Mini</ObjectName>
          </SingletonContainer>
        </Children>
        <Connection>
          <ConfigKey>[Skin],show_4decks</ConfigKey>
          <BindProperty>visible</BindProperty>
        </Connection>
      </WidgetGroup>

    </Children>
    <Connection>
      <ConfigKey>[Skin],show_4decks_row</ConfigKey>
      <BindProperty>visible</BindProperty>
      <Transform><Not/></Transform>
    </Connection>
  </WidgetGroup>

  <WidgetGroup>
    <ObjectName>DecksLeft</ObjectName>
    <Layout>horizontal</Layout>
    <SizePolicy>me,min</SizePolicy>
    <Children>

      <WidgetGroup>
        <Layout>vertical</Layout>
        <SizePolicy>me,min</SizePolicy>
        <Children>
          <SingletonContainer>
            <ObjectName>Deck3_Mini</ObjectName>
          </SingletonContainer>
        </Children>
        <Connection>
          <ConfigKey>[Skin],show_4decks</ConfigKey>
          <BindProperty>visible</BindProperty>
        </Connection>
      </WidgetGroup>

      <SingletonContainer>
        <ObjectName>Deck1_Mini</ObjectName>
      </SingletonContainer>

    </Children>
    <Connection>
      <ConfigKey>[Skin],show_4decks_row</ConfigKey>
      <BindProperty>visible</BindProperty>
    </Connection>
  </WidgetGroup>
</Template>
