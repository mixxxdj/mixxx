<Template>
  <SetVariable name="Type">deck</SetVariable>
  <WidgetGroup>
    <ObjectName>DecksLeft</ObjectName>
    <Layout>vertical</Layout>
    <SizePolicy>me,min</SizePolicy>
    <Children>

      <SingletonContainer>
        <ObjectName>Deck1_Src</ObjectName>
      </SingletonContainer>

      <WidgetGroup>
        <Layout>horizontal</Layout>
        <SizePolicy>me,min</SizePolicy>
        <Children>
          <SingletonContainer>
            <ObjectName>Deck3_Src</ObjectName>
          </SingletonContainer>
        </Children>
        <Connection>
          <ConfigKey>[Skin],show_4decks</ConfigKey>
          <BindProperty>visible</BindProperty>
        </Connection>
      </WidgetGroup>

      <!-- STEM Conversion Button -->
      <WidgetGroup>
        <RequiresStemConversion>true</RequiresStemConversion>
        <Layout>vertical</Layout>
        <SizePolicy>min,min</SizePolicy>
        <Children>
          <PushButton>
            <ObjectName>StemConversionButton</ObjectName>
            <Size>50f,50f</Size>
            <Text>Stems</Text>
            <Tooltip>Show stem conversion history</Tooltip>
            <ConfigKey>[Skin],show_stem_conversion_history</ConfigKey>
          </PushButton>
        </Children>
      </WidgetGroup>


    </Children>
  </WidgetGroup>
</Template>
