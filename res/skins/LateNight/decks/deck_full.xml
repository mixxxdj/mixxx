<Template>
  <WidgetGroup>
    <ObjectName>DeckContainer</ObjectName>
    <Layout>horizontal</Layout>
    <SizePolicy>me,min</SizePolicy>
    <Children>

      <WidgetGroup>
        <ObjectName>Deck<Variable name="ChanNum"/></ObjectName>
        <Layout>horizontal</Layout>
        <SizePolicy>me,min</SizePolicy>
        <Connection>
          <ConfigKey>[Skin],highlight_deck<Variable name="ChanNum"/></ConfigKey>
          <BindProperty>highlight_deck</BindProperty>
        </Connection>
        <Connection>
          <ConfigKey>[Skin],highlight_input_allow</ConfigKey>
          <BindProperty>highlight_input_allow</BindProperty>
        </Connection>
        <Children>

          <WidgetGroup>
            <ObjectName>DeckRows12345</ObjectName>
            <SizePolicy>me,min</SizePolicy>
            <Layout>vertical</Layout>
            <Children>

              <Template src="skins:LateNight/decks/row_1_keyVinylFx.xml"/>

              <WidgetGroup>
                <ObjectName>DeckRows234</ObjectName>
                <SizePolicy>me,min</SizePolicy>
                <Layout>horizontal</Layout>
                <Children>

                  <WidgetGroup>
                    <ObjectName>SpinnyCoverContainer_Big</ObjectName>
                    <Layout>horizontal</Layout>
                    <SizePolicy>f,f</SizePolicy>
                    <Children>
                      <SingletonContainer>
                        <ObjectName>SpinnyCoverart<Variable name="ChanNum"/></ObjectName>
                      </SingletonContainer>
                    </Children>
                    <Connection>
                      <ConfigKey>[Skin],show_big_spinny_or_cover</ConfigKey>
                      <BindProperty>visible</BindProperty>
                    </Connection>
                  </WidgetGroup><!-- SpinnyCoverContainer_Big -->

                  <WidgetGroup>
                    <SizePolicy>me,min</SizePolicy>
                    <Layout>vertical</Layout>
                    <Children>
                      <Template src="skins:LateNight/decks/row_2_3_TitleArtistTime.xml" />
                      <Template src="skins:LateNight/decks/row_4_overviewSpinny.xml" />
                    </Children>
                  </WidgetGroup>

                </Children>
              </WidgetGroup><!-- DeckRows234 -->

              <Template src="skins:LateNight/decks/row_5_transportLoopJump.xml" />

            </Children>
          </WidgetGroup><!-- DeckRows12345 -->

          <WidgetGroup>
            <ObjectName>DeckRateSpacer</ObjectName>
            <SizePolicy>min,min</SizePolicy>
            <Children/>
            <!-- this is sized and styled in css -->
            <Connection>
              <ConfigKey persist="true">[Skin],show_rate_controls</ConfigKey>
              <Transform><Not/></Transform>
              <BindProperty>visible</BindProperty>
            </Connection>
          </WidgetGroup>

          <Template src="skins:LateNight/decks/rate_controls.xml"/>
        </Children>
      </WidgetGroup><!-- DeckN -->
    </Children>
  </WidgetGroup>
</Template>
