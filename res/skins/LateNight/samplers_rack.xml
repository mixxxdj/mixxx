<Template>

  <SingletonDefinition>
    <ObjectName>SamplerExpandbutton_Singleton</ObjectName>
    <Children>
      <WidgetGroup>
        <ObjectName>AlignCenterTop</ObjectName>
        <Layout>vertical</Layout>
        <SizePolicy>min,min</SizePolicy>
        <Children>
          <WidgetGroup>
            <ObjectName>SamplerExpand</ObjectName>
            <SizePolicy>min,me</SizePolicy>
            <Layout>vertical</Layout>
            <Children>
              <WidgetGroup>
                <ObjectName>EmbeddeButtonBox</ObjectName>
                <Layout>vertical</Layout>
                <Size>22f,22f</Size>
                <Children>
                  <PushButton>
                    <Size>20f,20f</Size>
                    <TooltipId>show_samplers</TooltipId>
                    <ObjectName>SamplerExpandButton</ObjectName>
                    <NumberStates>2</NumberStates>
                      <State>
                        <Number>0</Number>
                        <Pressed scalemode="STRETCH_ASPECT">skin:/buttons/btn_fx_sampler_expand.svg</Pressed>
                        <Unpressed scalemode="STRETCH_ASPECT">skin:/buttons/btn_fx_sampler_expand.svg</Unpressed>
                      </State>
                      <State>
                        <Number>1</Number>
                        <Pressed scalemode="STRETCH_ASPECT">skin:/buttons/btn_fx_sampler_collapse.svg</Pressed>
                        <Unpressed scalemode="STRETCH_ASPECT">skin:/buttons/btn_fx_sampler_collapse.svg</Unpressed>
                      </State>
                    <Connection>
                      <ConfigKey>[Skin],expand_samplers</ConfigKey>
                      <ButtonState>LeftButton</ButtonState>
                    </Connection>
                  </PushButton>

                </Children>
              </WidgetGroup>
                  <WidgetGroup><Size>0min,0me</Size></WidgetGroup>
            </Children>
          </WidgetGroup>
        </Children>
      </WidgetGroup>
    </Children>
  </SingletonDefinition>

