<Template>
  <WidgetGroup>
    <Layout>horizontal</Layout>
    <SizePolicy>me,min</SizePolicy>
    <Children>

    <!-- Select between either the full or half width waveforms -->
    <WidgetStack currentpage="[Skin],half_waveform">
      <Children>
          <!-- Waveforms full width -->
          <WidgetGroup>
            <Layout>horizontal</Layout>
            <Size>100me,40me</Size>
            <Children>
              <SingletonContainer>
                <ObjectName>WaveformsSingleton</ObjectName>
              </SingletonContainer>
            </Children>
          </WidgetGroup>

           <!-- Waveforms half width -->
          <WidgetGroup trigger="[Skin],half_waveform" on_hide_select="0">
            <Layout>horizontal</Layout>
            <Size>100me,40me</Size>
            <Children>
              <SingletonContainer>
                <ObjectName>WaveformsSingleton_half</ObjectName>
              </SingletonContainer>
            </Children>
          </WidgetGroup>
        </Children>
    </WidgetStack>

      <PushButton>
        <ObjectName>BeatgridButtonsToggle</ObjectName>
        <Size>28f,40me</Size>
        <NumberStates>2</NumberStates>
        <State>
          <Number>0</Number>
        </State>
        <State>
          <Number>1</Number>
        </State>
        <Connection>
          <ConfigKey persist="true">[Skin],beatgrid_buttons</ConfigKey>
        </Connection>
      </PushButton>

    </Children>
  </WidgetGroup>
</Template>
