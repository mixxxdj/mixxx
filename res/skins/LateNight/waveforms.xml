<Template>
  <WidgetGroup>
    <Layout>horizontal</Layout>
    <SizePolicy>me,min</SizePolicy>
    <Children>

      <!-- Waveforms -->
      <WidgetGroup>
        <Layout>horizontal</Layout>
        <Size>100me,40me</Size>
        <Children>
          <SingletonContainer>
            <ObjectName>WaveformsSingleton</ObjectName>
          </SingletonContainer>
        </Children>
      </WidgetGroup>

      <PushButton>
        <ObjectName>BeatgridButtonsToggle</ObjectName>
        <Size>28f,40me</Size>
        <NumberStates>2</NumberStates>
        <State>
          <Number>0</Number>
        </State>
        <State>
          <Number>1</Number>
        </State>
        <Connection>
          <ConfigKey persist="true">[Skin],beatgrid_buttons</ConfigKey>
        </Connection>
      </PushButton>

    </Children>
  </WidgetGroup>
</Template>
