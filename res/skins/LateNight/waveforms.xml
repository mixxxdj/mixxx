<Template>
  <WidgetGroup>
    <Layout>horizontal</Layout>
<!-- Set min-height to 1px to prevent
    massive GUI lag with hidden waveforms lp:1758660 -->
    <Size>1me,1min</Size>
    <Children>

      <!-- Waveforms -->
      <WidgetGroup>
        <Layout>vertical</Layout>
        <Size>100me,1me</Size>
        <Children>
      <!-- If waveforms' container is dragged to minimal height (1px) we need
          a 1px spacer here so the waveforms aren't visible -->
          <WidgetGroup><Size>1me,1f</Size></WidgetGroup>
          <SingletonContainer>
            <ObjectName>WaveformsSingleton</ObjectName>
          </SingletonContainer>
        </Children>
      </WidgetGroup>

      <PushButton>
        <ObjectName>BeatgridButtonsToggle</ObjectName>
        <Size>28f,1me</Size>
        <NumberStates>2</NumberStates>
        <State>
          <Number>0</Number>
        </State>
        <State>
          <Number>1</Number>
        </State>
        <Connection>
          <ConfigKey persist="true">[Skin],beatgrid_buttons</ConfigKey>
        </Connection>
      </PushButton>

    </Children>
  </WidgetGroup>
</Template>
