<Template>
  <WidgetGroup>
    <Layout>horizontal</Layout>
    <SizePolicy>me,min</SizePolicy>
    <Children>

      <!-- Waveforms -->
      <WidgetGroup>
        <Layout>horizontal</Layout>
        <Size>100me,40me</Size>
        <Children>
          <SingletonContainer>
            <ObjectName>WaveformsSingleton</ObjectName>
          </SingletonContainer>
        </Children>
      </WidgetGroup>

      <Template src="skin:button_2state_persist.xml">
        <SetVariable name="ObjectName">BeatgridButtonsToggle</SetVariable>
        <SetVariable name="Size">28f,40me</SetVariable>
        <SetVariable name="ConfigKey">[Skin],beatgrid_buttons</SetVariable>
      </Template>

    </Children>
  </WidgetGroup>
</Template>
