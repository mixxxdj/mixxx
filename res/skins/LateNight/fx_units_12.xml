            <Layout>vertical</Layout>
            <SizePolicy>me,min</SizePolicy>
            <Children>
              <Template src="skin:fx_unit_parameters_visible.xml">
                <SetVariable name="FxUnit">2</SetVariable>
              </Template>
            </Children>
          </WidgetGroup>

        </Children>
      </WidgetStack><!-- /EffectUnit 2 -->

    </Children>
  </WidgetGroup>
</Template>
