<Template>
  <WidgetGroup>
    <ObjectName>DecksSizer</ObjectName>
    <Layout>vertical</Layout>
    <SizePolicy>me,min</SizePolicy>
    <Children>
      <WidgetGroup>
        <ObjectName>DecksLeftContainer</ObjectName>
        <Layout>vertical</Layout>
        <SizePolicy>me,min</SizePolicy>
        <Children>
          <Template src="skin:deck.xml">
            <SetVariable name="channum">1</SetVariable>
          </Template>

          <WidgetGroup>
            <Layout>horizontal</Layout>
            <SizePolicy>me,min</SizePolicy>
            <Children>
              <Template src="skin:deck.xml">
                <SetVariable name="channum">3</SetVariable>
              </Template>
            </Children>
            <Connection>
              <ConfigKey>[Skin],show_4decks</ConfigKey>
              <BindProperty>visible</BindProperty>
            </Connection>
          </WidgetGroup>
        </Children>
      </WidgetGroup>
    </Children>
  </WidgetGroup>
</Template>
