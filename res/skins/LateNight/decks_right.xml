<Template>
  <WidgetGroup>
    <ObjectName>DecksSizer</ObjectName>
    <Layout>horizontal</Layout>
    <SizePolicy>me,min</SizePolicy>
    <Children>
      <WidgetGroup>
        <ObjectName>DecksRightContainer</ObjectName>
        <Layout>vertical</Layout>
        <SizePolicy>me,min</SizePolicy>
        <Children>
          <Template src="skin:deck.xml">
            <SetVariable name="channum">2</SetVariable>
            <SetVariable name="decks_group">12</SetVariable>
          </Template>

          <WidgetGroup>
            <Layout>horizontal</Layout>
            <SizePolicy>me,min</SizePolicy>
            <Children>
              <Template src="skin:deck.xml">
                <SetVariable name="channum">4</SetVariable>
                <SetVariable name="decks_group">34</SetVariable>
              </Template>
            </Children>
            <Connection>
              <ConfigKey>[Skin],show_4decks</ConfigKey>
              <BindProperty>visible</BindProperty>
            </Connection>
          </WidgetGroup>

        </Children>
      </WidgetGroup>

      <WidgetGroup>
        <Size>2f,1min</Size>
        <Connection>
          <ConfigKey>[Master],skin_settings</ConfigKey>
          <BindProperty>visible</BindProperty>
        </Connection>
      </WidgetGroup>

    </Children>
  </WidgetGroup>
</Template>
