<Template>

  <SingletonDefinition>
    <ObjectName>CrossfaderSingleton</ObjectName>
    <Children>
      <SliderComposed>
        <TooltipId>crossfader</TooltipId>
        <Handle scalemode="STRETCH_ASPECT">knob_crossfader.svg</Handle>
        <Slider>slider_crossfader.svg</Slider>
        <Horizontal>true</Horizontal>
        <Connection>
          <ConfigKey>[Master],crossfader</ConfigKey>
        </Connection>
      </SliderComposed>
    </Children>
  </SingletonDefinition>

  <WidgetGroup>
    <ObjectName>Mixer</ObjectName>
    <SizePolicy>max,me</SizePolicy>
    <Layout>horizontal</Layout>
    <Children>

      <WidgetGroup>
        <ObjectName>MixerChannelControls</ObjectName>
        <Layout>horizontal</Layout>
        <SizePolicy>max,min</SizePolicy>
        <Children>

          <WidgetGroup>
            <Layout>horizontal</Layout>
            <Size>2f,min</Size>
          </WidgetGroup>

          <WidgetGroup>
            <ObjectName>MixerContainer</ObjectName>
            <Layout>vertical</Layout>
            <SizePolicy>min,min</SizePolicy>
            <Children>
              <WidgetGroup><SizePolicy>min,e</SizePolicy></WidgetGroup>

              <WidgetGroup><!-- Channel controls -->
                <ObjectName>AlignHCenter</ObjectName>
                <SizePolicy>min,min</SizePolicy>
                <Layout>horizontal</Layout>
                <Children>
                  <WidgetGroup>
                    <SizePolicy>max,min</SizePolicy>
                    <Layout>horizontal</Layout>
                    <Children>
                      <Template src="skin:mixer_channel_4decks.xml">
                        <SetVariable name="channum">3</SetVariable>
                        <SetVariable name="xfaderLeft">default</SetVariable>
                        <SetVariable name="xfaderRight">warning</SetVariable>
                      </Template>
                    </Children>
                    <Connection>
                      <ConfigKey persist="true">[Skin],show_4decks</ConfigKey>
                      <BindProperty>visible</BindProperty>
                    </Connection>
                  </WidgetGroup>

                  <Template src="skin:mixer_channel_left.xml">
                    <SetVariable name="channum">1</SetVariable>
                    <SetVariable name="xfaderLeft">default</SetVariable>
                    <SetVariable name="xfaderRight">warning</SetVariable>
                  </Template>

                  <WidgetGroup>
                    <ObjectName>MasterVuMeter_2Decks</ObjectName>
                    <Layout>vertical</Layout>
                    <SizePolicy>max,me</SizePolicy>
                    <Children>
                      <!-- Spacer -->
                      <WidgetGroup>
                        <Layout>vertical</Layout>
                        <Size>1min,0me</Size>
                        <Children/>
                      </WidgetGroup>

                      <WidgetGroup><!-- Peak indicator L +R -->
                        <Layout>horizontal</Layout>
                        <SizePolicy>max,max</SizePolicy>
                        <Children>
                          <StatusLight>
                            <TooltipId>master_PeakIndicator</TooltipId>
                            <PathStatusLight>style/clipping_deck_over.svg</PathStatusLight>
                            <PathBack>style/clipping_deck.svg</PathBack>
                            <Connection>
                              <ConfigKey>[Master],PeakIndicatorL</ConfigKey>
                            </Connection>
                          </StatusLight>
                          <StatusLight>
                            <TooltipId>master_PeakIndicator</TooltipId>
                            <PathStatusLight>style/clipping_deck_over.svg</PathStatusLight>
                            <PathBack>style/clipping_deck.svg</PathBack>
                            <Connection>
                              <ConfigKey>[Master],PeakIndicatorR</ConfigKey>
                            </Connection>
                          </StatusLight>
                        </Children>
                      </WidgetGroup><!-- /Peak indicator L +R -->

                      <WidgetGroup><!-- Level L +R -->
                        <Layout>horizontal</Layout>
                        <SizePolicy>max,max</SizePolicy>
                        <Children>
                          <VuMeter>
                            <TooltipId>master_VuMeterL</TooltipId>
                            <PathVu>style/volume_display_deck_over.png</PathVu>
                            <PathBack>style/volume_display_deck.png</PathBack>
                            <Horizontal>false</Horizontal>
                            <PeakHoldSize>5</PeakHoldSize>
                            <PeakHoldTime>500</PeakHoldTime>
                            <PeakFallTime>50</PeakFallTime>
                            <PeakFallStep>2</PeakFallStep>
                            <Connection>
                              <ConfigKey>[Master],VuMeterL</ConfigKey>
                            </Connection>
                          </VuMeter>
                          <VuMeter>
                            <TooltipId>master_VuMeterR</TooltipId>
                            <PathVu>style/volume_display_deck_over.png</PathVu>
                            <PathBack>style/volume_display_deck.png</PathBack>
                            <Horizontal>false</Horizontal>
                            <PeakHoldSize>5</PeakHoldSize>
                            <PeakHoldTime>500</PeakHoldTime>
                            <PeakFallTime>50</PeakFallTime>
                            <PeakFallStep>2</PeakFallStep>
                            <Connection>
                              <ConfigKey>[Master],VuMeterR</ConfigKey>
                            </Connection>
                          </VuMeter>
                        </Children>
                      </WidgetGroup><!-- /Level L +R -->

                      <!-- Spacer -->
                      <WidgetGroup>
                        <Layout>vertical</Layout>
                        <Size>1min,5f</Size>
                        <Children/>
                      </WidgetGroup>
                    </Children>
                    <Connection>
                      <ConfigKey persist="true">[Skin],show_4decks</ConfigKey>
                      <BindProperty>visible</BindProperty>
                      <Transform><Invert/><Not/></Transform>
                    </Connection>
                  </WidgetGroup>

                  <Template src="skin:mixer_channel_right.xml">
                    <SetVariable name="channum">2</SetVariable>
                    <SetVariable name="xfaderLeft">warning</SetVariable>
                    <SetVariable name="xfaderRight">default</SetVariable>
                  </Template>

                  <WidgetGroup>
                    <SizePolicy>max,min</SizePolicy>
                    <Layout>horizontal</Layout>
                    <Children>
                      <Template src="skin:mixer_channel_4decks.xml">
                        <SetVariable name="channum">4</SetVariable>
                        <SetVariable name="xfaderLeft">warning</SetVariable>
                        <SetVariable name="xfaderRight">default</SetVariable>
                      </Template>
                      <WidgetGroup><Size>4f,1min</Size></WidgetGroup>
                    </Children>
                    <Connection>
                      <ConfigKey persist="true">[Skin],show_4decks</ConfigKey>
                      <BindProperty>visible</BindProperty>
                    </Connection>
                  </WidgetGroup>
                </Children>
              </WidgetGroup><!-- /Channel controls -->

              <WidgetGroup><!-- Crossfader + Channel1/2 assign switches -->
                <ObjectName>CrossfaderAndSwitches2Decks</ObjectName>
                <Layout>horizontal</Layout>
                <Children>

                  <!-- Channel1 xfader switch:
                      visible if deck is NOT assigned to left side of xFader -->
                  <WidgetGroup>
                    <Layout>vertical</Layout>
                    <SizePolicy>me,min</SizePolicy>
                    <Children>
                      <WidgetGroup><Size>min,2f</Size></WidgetGroup>
                      <Template src="skin:button_xfader_deck.xml">
                        <SetVariable name="group">[Channel1]</SetVariable>
                        <SetVariable name="xfaderLeft">default</SetVariable>
                        <SetVariable name="xfaderRight">warning</SetVariable>
                      </Template>
                      <WidgetGroup><Size>min,me</Size></WidgetGroup>
                    </Children>
                    <Connection>
                      <ConfigKey persist="true">[Skin],show_4decks</ConfigKey>
                      <Transform><Not/></Transform>
                      <BindProperty>visible</BindProperty>
                    </Connection>
                  </WidgetGroup><!-- /Channel1 xfader switch -->

                  <WidgetGroup>
                    <ObjectName>Crossfader</ObjectName>
                    <Layout>horizontal</Layout>
                    <SizePolicy>min,min</SizePolicy>
                    <Children>
                      <SingletonContainer>
                        <ObjectName>CrossfaderSingleton</ObjectName>
                        <Connection>
                          <ConfigKey persist="true">[Skin],show_4decks</ConfigKey>
                          <BindProperty>visible</BindProperty>
                        </Connection>
                      </SingletonContainer>
                      <WidgetGroup>
                        <Layout>horizontal</Layout>
                        <Children>
                          <SingletonContainer>
                            <ObjectName>CrossfaderSingleton</ObjectName>
                            <Connection>
                              <ConfigKey persist="true">[Skin],show_eq_knobs</ConfigKey>
                              <BindProperty>visible</BindProperty>
                            </Connection>
                          </SingletonContainer>
                          <SliderComposed>
                            <TooltipId>crossfader</TooltipId>
                            <Handle scalemode="STRETCH_ASPECT">knob_crossfader.svg</Handle>
                            <Slider>slider_crossfader_small.svg</Slider>
                            <Horizontal>true</Horizontal>
                            <Connection>
                              <ConfigKey>[Master],crossfader</ConfigKey>
                            </Connection>
                            <Connection>
                              <ConfigKey persist="true">[Skin],show_eq_knobs</ConfigKey>
                              <Transform><Not/></Transform>
                              <BindProperty>visible</BindProperty>
                            </Connection>
                          </SliderComposed>
                        </Children>
                        <Connection>
                          <ConfigKey persist="true">[Skin],show_4decks</ConfigKey>
                          <Transform><Not/></Transform>
                          <BindProperty>visible</BindProperty>
                        </Connection>
                      </WidgetGroup>
                    </Children>
                  </WidgetGroup>

                  <!-- Channel2 xfader switch:
                      visible if deck is NOT assigned to right side of xFader -->
                  <WidgetGroup>
                    <Layout>vertical</Layout>
                    <SizePolicy>me,min</SizePolicy>
                    <Children>
                      <WidgetGroup><Size>min,2f</Size></WidgetGroup>
                      <Template src="skin:button_xfader_deck.xml">
                        <SetVariable name="group">[Channel2]</SetVariable>
                        <SetVariable name="xfaderLeft">warning</SetVariable>
                        <SetVariable name="xfaderRight">default</SetVariable>
                      </Template>
                      <WidgetGroup><Size>min,me</Size></WidgetGroup>
                    </Children>
                    <Connection>
                      <ConfigKey persist="true">[Skin],show_4decks</ConfigKey>
                      <Transform><Not/></Transform>
                      <BindProperty>visible</BindProperty>
                    </Connection>
                  </WidgetGroup><!-- /Channel2 xfader switch -->

                </Children>
                <Connection>
                  <ConfigKey persist="true">[Skin],show_xfader</ConfigKey>
                  <BindProperty>visible</BindProperty>
                </Connection>
              </WidgetGroup><!-- /Crossfader + Channel1/2 assign switches -->

              <WidgetGroup><SizePolicy>min,e</SizePolicy></WidgetGroup>

            </Children>
          </WidgetGroup>

          <WidgetGroup>
            <Layout>horizontal</Layout>
            <Size>2f,min</Size>
          </WidgetGroup>
        </Children>
      </WidgetGroup>

      <!-- Master & Headphone Controls -->
      <Template src="skin:mixer_master_headphone.xml"/>

    </Children>
    <Connection>
      <ConfigKey persist="true">[Master],show_mixer</ConfigKey>
      <BindProperty>visible</BindProperty>
    </Connection>
  </WidgetGroup>
</Template>
