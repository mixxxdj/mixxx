<Template>
  <SetVariable name="Type">deck</SetVariable>
  <WidgetGroup>
    <ObjectName>DecksLeft</ObjectName>
    <Layout>vertical</Layout>
    <SizePolicy>me,min</SizePolicy>
    <Children>

      <WidgetGroup> <!-- 2 Decks -->
        <Layout>horizontal</Layout>
        <SizePolicy>me,min</SizePolicy>
        <Children>
          <SingletonContainer>
            <ObjectName>Deck1_Src</ObjectName>
          </SingletonContainer>
        </Children>
        <Connection>
          <ConfigKey>[Skin],show_4decks</ConfigKey>
          <Transform><Not/></Transform>
          <BindProperty>visible</BindProperty>
        </Connection>
      </WidgetGroup>

      <WidgetGroup> <!-- 4 Decks -->
        <Layout>horizontal</Layout>
        <SizePolicy>me,min</SizePolicy>
        <Children>
        
          <WidgetGroup> <!-- Static -->
            <Layout>vertical</Layout>
            <SizePolicy>me,min</SizePolicy>
            <Children>
              <SingletonContainer>
                <ObjectName>Deck1_Src</ObjectName>
              </SingletonContainer>
              <SingletonContainer>
                <ObjectName>Deck3_Src</ObjectName>
              </SingletonContainer>
            </Children>
            <Connection>
              <ConfigKey>[Skin],dynamicdecks</ConfigKey>
              <Transform><Not/></Transform>
              <BindProperty>visible</BindProperty>
            </Connection>
          </WidgetGroup>
        
          <WidgetGroup> <!-- Dynamic -->
            <Layout>horizontal</Layout>
            <SizePolicy>me,min</SizePolicy>
            <Children>

              <WidgetGroup> <!-- Deck 1 -->
                <Layout>horizontal</Layout>
                <SizePolicy>me,min</SizePolicy>
                <Children>
                  <SingletonContainer>
                    <ObjectName>Deck1_Src</ObjectName>
                  </SingletonContainer>
                </Children>
                <Connection>
                  <ConfigKey>[Controller],deck1_active</ConfigKey>
                  <BindProperty>visible</BindProperty>
                </Connection>
              </WidgetGroup>

              <WidgetGroup> <!-- Deck 3 -->
                <Layout>horizontal</Layout>
                <SizePolicy>me,min</SizePolicy>
                <Children>
                  <SingletonContainer>
                    <ObjectName>Deck3_Src</ObjectName>
                  </SingletonContainer>
                </Children>
                <Connection>
                  <ConfigKey>[Controller],deck1_active</ConfigKey>
                  <Transform><Not/></Transform>
                  <BindProperty>visible</BindProperty>
                </Connection>
              </WidgetGroup>
              
            </Children>
            <Connection>
              <ConfigKey>[Skin],dynamicdecks</ConfigKey>
              <BindProperty>visible</BindProperty>
            </Connection>
          </WidgetGroup>

        </Children>
        <Connection>
          <ConfigKey>[Skin],show_4decks</ConfigKey>
          <BindProperty>visible</BindProperty>
        </Connection>
      </WidgetGroup>

    </Children>
  </WidgetGroup>
</Template>
