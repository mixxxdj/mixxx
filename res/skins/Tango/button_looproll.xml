<!--
  Description:
    An individual beatloop button.
  Variables:
    group: The group for the controls.
    LoopLength_Text: length of the rolling beat loop as text
    LoopLength_Control: length of the rolling beatloop as config value
-->
<Template>
  <Template src="skin:button_1state.xml">
    <SetVariable name="TooltipId">beatloop</SetVariable>
    <SetVariable name="ObjectName">LoopRollButton</SetVariable>
    <SetVariable name="Size">22f,22f</SetVariable>
    <SetVariable name="state_0_text"><Variable name="LoopLength_Text"/></SetVariable>
    <SetVariable name="ConfigKey"><Variable name="group"/>,beatlooproll_<Variable name="LoopLength_Control"/>_activate</SetVariable>
  </Template>
</Template>
