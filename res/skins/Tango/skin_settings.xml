<!--
Description:
  The floating skin settings widget.

  Bug: qss 'qproperty-layoutAlignment' is not respected for stacked layout.
  No way to push SkinSettings to the right edge while keeping the area underneath clickable.
-->
<Template>
  <WidgetGroup>
    <Layout>horizontal</Layout>
    <Size>215f,1me</Size>
    <Children>
      <WidgetGroup>
        <ObjectName>SkinSettings</ObjectName>
        <Layout>vertical</Layout>
        <SizePolicy>200f,me</SizePolicy>
        <Children>
          <WidgetGroup>
            <ObjectName>SkinSettingsHeader</ObjectName>
            <Layout>horizontal</Layout>
            <Size>200f,30f</Size>
            <Children>
              <Label>
                <ObjectName>CategoryLabel</ObjectName>
                <Text>Decks / General</Text>
              </Label>
                <WidgetGroup><Size>1me,1me</Size><Children/></WidgetGroup>
              <Template src="skin:button_2state.xml">
                <SetVariable name="ObjectName">SkinSettingsClose</SetVariable>
                <SetVariable name="Size">23f,17f</SetVariable>
              <!-- actually not necessary because state_0 can't be visible here -->
                <SetVariable name="state_0_pressed">skinsettings_close.svg</SetVariable>
                <SetVariable name="state_0_unpressed">skinsettings_close.svg</SetVariable>
                <SetVariable name="state_1_pressed">skinsettings_close.svg</SetVariable>
                <SetVariable name="state_1_unpressed">skinsettings_close.svg</SetVariable>
                <SetVariable name="ConfigKey">[Tango],skin_settings</SetVariable>
              </Template>
            </Children>
          </WidgetGroup>

          <WidgetGroup><!-- Main Decks Settings -->
            <ObjectName>SkinSettingsCategory</ObjectName>
            <Layout>vertical</Layout>
            <SizePolicy>f,f</SizePolicy>
            <Children>

              <Template src="skin:button_2state_persist.xml">
                <SetVariable name="ObjectName">SkinSettingsButton</SetVariable>
                <SetVariable name="Size">172f,17f</SetVariable>
                <SetVariable name="Align">left</SetVariable>
                <SetVariable name="state_0_text">      Stacked Overviews</SetVariable>
                <SetVariable name="state_1_text"> &#10003; Stacked Overviews</SetVariable>
                <SetVariable name="ConfigKeyPerm">[Tango],stacked_overviews</SetVariable>
              </Template>

              <Template src="skin:button_2state_persist.xml">
                <SetVariable name="ObjectName">SkinSettingsButton</SetVariable>
                <SetVariable name="Size">172f,17f</SetVariable>
                <SetVariable name="Align">left</SetVariable>
                <SetVariable name="state_0_text">      Star Rating</SetVariable>
                <SetVariable name="state_1_text"> &#10003; Star Rating</SetVariable>
                <SetVariable name="ConfigKeyPerm">[Tango],stars</SetVariable>
              </Template>

              <Template src="skin:button_2state_persist.xml">
                <SetVariable name="ObjectName">SkinSettingsButton</SetVariable>
                <SetVariable name="Size">172f,17f</SetVariable>
                <SetVariable name="Align">left</SetVariable>
                <SetVariable name="state_0_text">      Track Comment</SetVariable>
                <SetVariable name="state_1_text"> &#10003; Track Comment</SetVariable>
                <SetVariable name="ConfigKeyPerm">[Tango],trackComment</SetVariable>
              </Template>

              <Template src="skin:button_2state_persist.xml">
                <SetVariable name="ObjectName">SkinSettingsButton</SetVariable>
                <SetVariable name="Size">172f,17f</SetVariable>
                <SetVariable name="Align">left</SetVariable>
                <SetVariable name="state_0_text">      BPM / Pitch Fader</SetVariable>
                <SetVariable name="state_1_text"> &#10003; BPM / Pitch Fader</SetVariable>
                <SetVariable name="ConfigKeyPerm">[Tango],pitch_fader</SetVariable>
              </Template>

              <WidgetGroup><!-- Pitch/Key submenu -->
                <Layout>stacked</Layout>
                <Size>172f,17f</Size>
                <Children>
                  <!-- index 0 due to bug -->
                  <WidgetGroup><Size>0f,0f</Size></WidgetGroup>

                  <WidgetGroup><!-- translucent cover when Pitch slider is hidden -->
                    <ObjectName>SubmenuCover</ObjectName>
                    <Layout>vertical</Layout>
                    <SizePolicy>me,me</SizePolicy>
                    <Children/>
                    <Connection>
                      <ConfigKey persist="true">[Tango],pitch_fader</ConfigKey>
                      <BindProperty>visible</BindProperty>
                      <Transform><Not/></Transform>
                    </Connection>
                  </WidgetGroup>

                  <Template src="skin:button_2state_persist.xml">
                    <SetVariable name="ObjectName">SkinSettingsButton</SetVariable>
                    <SetVariable name="Size">172f,17f</SetVariable>
                    <SetVariable name="Align">left</SetVariable>
                    <SetVariable name="state_0_text">      Key Controls</SetVariable>
                    <SetVariable name="state_1_text"> &#10003; Key Controls</SetVariable>
                    <SetVariable name="ConfigKeyPerm">[Tango],key_controls</SetVariable>
                  </Template>
                </Children>
              </WidgetGroup><!-- Pitch/Key submenu -->

              <Template src="skin:button_2state_persist.xml">
                <SetVariable name="ObjectName">SkinSettingsButton</SetVariable>
                <SetVariable name="Size">172f,17f</SetVariable>
                <SetVariable name="Align">left</SetVariable>
                <SetVariable name="state_0_text">      Loop/Beatjump controls</SetVariable>
                <SetVariable name="state_1_text"> &#10003; Loop/Beatjump controls</SetVariable>
                <SetVariable name="ConfigKeyPerm">[Tango],loop_beatjump_controls</SetVariable>
              </Template>
            </Children>
          </WidgetGroup>

          <Label><!-- Mixer Settings -->
            <ObjectName>CategoryLabel</ObjectName>
            <Text>Mixer</Text>
          </Label>
          <WidgetGroup>
            <ObjectName>SkinSettingsCategory</ObjectName>
            <Layout>vertical</Layout>
            <SizePolicy>f,f</SizePolicy>
            <Children>

              <Template src="skin:button_2state_persist.xml">
                <SetVariable name="ObjectName">SkinSettingsButton</SetVariable>
                <SetVariable name="Size">172f,17f</SetVariable>
                <SetVariable name="Align">left</SetVariable>
                <SetVariable name="state_0_text">      Channel Mixer</SetVariable>
                <SetVariable name="state_1_text"> &#10003; Channel Mixer</SetVariable>
                <SetVariable name="ConfigKeyPerm">[Tango],channel_mixer</SetVariable>
              </Template>

              <WidgetGroup><!-- EQ & Filter knobs submenu -->
                <Layout>stacked</Layout>
                <Size>172f,34f</Size>
                <Children>
                  <!-- index 0 due to bug -->
                  <WidgetGroup><Size>0f,0f</Size></WidgetGroup>

                  <WidgetGroup><!-- translucent cover when Channel Mixer is hidden -->
                    <ObjectName>SubmenuCover</ObjectName>
                    <Layout>vertical</Layout>
                    <SizePolicy>me,me</SizePolicy>
                    <Children/>
                    <Connection>
                      <ConfigKey persist="true">[Tango],channel_mixer</ConfigKey>
                      <BindProperty>visible</BindProperty>
                      <Transform><Not/></Transform>
                    </Connection>
                  </WidgetGroup>

                  <WidgetGroup><!-- EQ Knobs button -->
                    <Layout>vertical</Layout>
                    <Size>172f,34f</Size>
                    <Children>

                      <Template src="skin:button_2state_persist.xml">
                        <SetVariable name="ObjectName">SkinSettingsButton</SetVariable>
                        <SetVariable name="Size">172f,17f</SetVariable>
                        <SetVariable name="Align">left</SetVariable>
                        <SetVariable name="state_0_text">      EQ Knobs</SetVariable>
                        <SetVariable name="state_1_text"> &#10003; EQ Knobs</SetVariable>
                        <SetVariable name="ConfigKeyPerm">[Tango],eq_knobs</SetVariable>
                      </Template>

                      <WidgetGroup><!-- Filter knob submenu -->
                        <Layout>stacked</Layout>
                        <Size>172f,17f</Size>
                        <Children>
                          <!-- index 0 due to bug -->
                          <WidgetGroup><Size>0f,0f</Size></WidgetGroup>

                          <WidgetGroup><!-- translucent cover when EQ Knobs are hidden -->
                            <ObjectName>SubmenuCover</ObjectName>
                            <Layout>vertical</Layout>
                            <SizePolicy>me,me</SizePolicy>
                            <Children/>
                            <Connection>
                              <ConfigKey persist="true">[Tango],eq_knobs</ConfigKey>
                              <BindProperty>visible</BindProperty>
                              <Transform><Not/></Transform>
                            </Connection>
                          </WidgetGroup>

                          <Template src="skin:button_2state_persist.xml">
                            <SetVariable name="ObjectName">SkinSettingsButton</SetVariable>
                            <SetVariable name="Size">172f,17f</SetVariable>
                            <SetVariable name="Align">left</SetVariable>
                            <SetVariable name="state_0_text">      Filter Knob</SetVariable>
                            <SetVariable name="state_1_text"> &#10003; Filter Knob</SetVariable>
                            <SetVariable name="ConfigKeyPerm">[Tango],filter_knob</SetVariable>
                          </Template>
                        </Children>
                      </WidgetGroup>

                    </Children>
                  </WidgetGroup><!-- EQ Knobs button --><!-- /Filter knob submenu -->

                </Children>
              </WidgetGroup><!-- /EQ & Filter knobs submenu -->

              <Template src="skin:button_2state_persist.xml">
                <SetVariable name="ObjectName">SkinSettingsButton</SetVariable>
                <SetVariable name="Size">172f,17f</SetVariable>
                <SetVariable name="Align">left</SetVariable>
                <SetVariable name="state_0_text">      VU Meter</SetVariable>
                <SetVariable name="state_1_text"> &#10003; VU Meter</SetVariable>
                <SetVariable name="ConfigKeyPerm">[Tango],vumeter</SetVariable>
              </Template>

              <Template src="skin:button_2state_persist.xml">
                <SetVariable name="ObjectName">SkinSettingsButton</SetVariable>
                <SetVariable name="Size">172f,17f</SetVariable>
                <SetVariable name="Align">left</SetVariable>
                <SetVariable name="state_0_text">      Crossfader</SetVariable>
                <SetVariable name="state_1_text"> &#10003; Crossfader</SetVariable>
                <SetVariable name="ConfigKeyPerm">[Tango],crossfader</SetVariable>
              </Template>

              <Template src="skin:button_2state_persist.xml">
                <SetVariable name="ObjectName">SkinSettingsButton</SetVariable>
                <SetVariable name="Size">172f,17f</SetVariable>
                <SetVariable name="Align">left</SetVariable>
                <SetVariable name="state_0_text">      Mixer Bar</SetVariable>
                <SetVariable name="state_1_text"> &#10003; Mixer Bar</SetVariable>
                <SetVariable name="ConfigKeyPerm">[Tango],mixerbar</SetVariable>
              </Template>

              <WidgetGroup><!-- MixerBar submenu -->
                <Layout>stacked</Layout>
                <Size>172f,51f</Size>
                <Children>
                  <!-- index 0 due to bug -->
                  <WidgetGroup><Size>0f,0f</Size></WidgetGroup>

                  <WidgetGroup><!-- translucent cover when MixerBar is hidden -->
                    <ObjectName>SubmenuCover</ObjectName>
                    <Layout>vertical</Layout>
                    <SizePolicy>me,me</SizePolicy>
                    <Children/>
                    <Connection>
                      <ConfigKey persist="true">[Tango],mixerbar</ConfigKey>
                      <BindProperty>visible</BindProperty>
                      <Transform><Not/></Transform>
                    </Connection>
                  </WidgetGroup>

                  <WidgetGroup><!-- MixerBar submenu buttons -->
                    <Layout>vertical</Layout>
                    <Size>172f,51f</Size>
                    <Children>
                      <Template src="skin:button_2state_persist.xml">
                        <SetVariable name="ObjectName">SkinSettingsButton</SetVariable>
                        <SetVariable name="Size">172f,17f</SetVariable>
                        <SetVariable name="Align">left</SetVariable>
                        <SetVariable name="state_0_text">      Headphone Mixer</SetVariable>
                        <SetVariable name="state_1_text"> &#10003; Headphone Mixer</SetVariable>
                        <SetVariable name="ConfigKeyPerm">[Tango],mixerbar_headphone</SetVariable>
                      </Template>
                      <Template src="skin:button_2state_persist.xml">
                        <SetVariable name="ObjectName">SkinSettingsButton</SetVariable>
                        <SetVariable name="Size">172f,17f</SetVariable>
                        <SetVariable name="Align">left</SetVariable>
                        <SetVariable name="state_0_text">      MIC mixer (if configured)</SetVariable>
                        <SetVariable name="state_1_text"> &#10003; MIC mixer (if configured)</SetVariable>
                        <SetVariable name="ConfigKeyPerm">[Tango],mixerbar_mic</SetVariable>
                      </Template>
                      <Template src="skin:button_2state_persist.xml">
                        <SetVariable name="ObjectName">SkinSettingsButton</SetVariable>
                        <SetVariable name="Size">172f,17f</SetVariable>
                        <SetVariable name="Align">left</SetVariable>
                        <SetVariable name="state_0_text">      AUX mixer (if configured)</SetVariable>
                        <SetVariable name="state_1_text"> &#10003; AUX mixer (if configured)</SetVariable>
                        <SetVariable name="ConfigKeyPerm">[Tango],mixerbar_aux</SetVariable>
                      </Template>
                    </Children>
                  </WidgetGroup><!-- MixerBar submenu buttons -->
                </Children>
              </WidgetGroup><!-- MixerBar submenu -->
            </Children>
          </WidgetGroup><!-- /Mixer Settings -->

          <Label>
            <ObjectName>CategoryLabel</ObjectName>
            <Text>Spinny / Cover</Text>
          </Label>
          <WidgetGroup><!-- Spinny Settings -->
            <ObjectName>SkinSettingsCategory</ObjectName>
            <Layout>vertical</Layout>
            <SizePolicy>f,f</SizePolicy>
            <Children>

              <Template src="skin:button_3state_persist.xml">
                <SetVariable name="ObjectName">SkinSettingsButton</SetVariable>
                <SetVariable name="Size">172f,17f</SetVariable>
                <SetVariable name="Align">left</SetVariable>
                <SetVariable name="state_0_text">      Spinny  /  Cover</SetVariable>
                <SetVariable name="state_1_text"> &#10003; Spinny&#9668; Cover</SetVariable>
                <SetVariable name="state_2_text"> &#10003; Spinny &#9658;Cover</SetVariable>
                <SetVariable name="ConfigKeyPerm">[Tango],empty_spinny_cover</SetVariable>
              </Template>

              <WidgetGroup><!-- SpinnyCover submenu -->
                <Layout>stacked</Layout>
                <Size>172f,34f</Size>
                <Children>
                  <!-- index 0 due to bug -->
                  <WidgetGroup><Size>0f,0f</Size></WidgetGroup>

                  <WidgetGroup><!-- translucent cover when Spinny/Cover is hidden -->
                    <ObjectName>SubmenuCover</ObjectName>
                    <Layout>vertical</Layout>
                    <SizePolicy>me,me</SizePolicy>
                    <Children/>
                    <Connection>
                      <ConfigKey persist="true">[Tango],empty_spinny_cover</ConfigKey>
                      <BindProperty>visible</BindProperty>
                      <Transform><Not/></Transform>
                    </Connection>
                  </WidgetGroup>

                  <WidgetGroup><!-- SpinnyCover submenu buttons -->
                    <Layout>vertical</Layout>
                    <Size>172f,34f</Size>
                    <Children>

                      <Template src="skin:button_2state_persist.xml">
                        <SetVariable name="ObjectName">SkinSettingsButton</SetVariable>
                        <SetVariable name="Size">172f,17f</SetVariable>
                        <SetVariable name="Align">left</SetVariable>
                        <SetVariable name="state_0_text">      °&#9668; O</SetVariable>
                        <SetVariable name="state_1_text">      ° &#9658;O</SetVariable>
                        <SetVariable name="ConfigKeyPerm">[Tango],spinnyCoverBIG</SetVariable>
                      </Template>

                      <Template src="skin:button_2state_persist.xml">
                        <SetVariable name="ObjectName">SkinSettingsButton</SetVariable>
                        <SetVariable name="Size">172f,17f</SetVariable>
                        <SetVariable name="Align">left</SetVariable>
                        <SetVariable name="state_0_text">      Cover on Spinny</SetVariable>
                        <SetVariable name="state_1_text"> &#10003; Cover on Spinny</SetVariable>
                        <SetVariable name="ConfigKeyPerm">[Tango],spinnyWithCoverArt</SetVariable>
                      </Template>
                    </Children>
                  </WidgetGroup><!-- Spinny/Cover submenu buttons -->
                </Children>
              </WidgetGroup><!-- Spinny/Cover submenu -->

            </Children>
          </WidgetGroup><!-- /Spinny Settings -->

          <Label><!-- Extras -->
            <ObjectName>CategoryLabel</ObjectName>
            <Text>Extras</Text>
          </Label>
          <WidgetGroup>
            <ObjectName>SkinSettingsCategory</ObjectName>
            <Layout>vertical</Layout>
            <SizePolicy>f,f</SizePolicy>
            <Children>

              <Template src="skin:button_2state_persist.xml">
                <SetVariable name="ObjectName">SkinSettingsButton</SetVariable>
                <SetVariable name="Size">172f,17f</SetVariable>
                <SetVariable name="Align">left</SetVariable>
                <SetVariable name="state_0_text">      2&#9668; 4  Effect Units</SetVariable>
                <SetVariable name="state_1_text">      2 &#9658;4  Effect Units</SetVariable>
                <SetVariable name="ConfigKeyPerm">[Tango],2or4_fxUnits</SetVariable>
              </Template>

              <Template src="skin:button_2state_persist.xml">
                <SetVariable name="TooltipId">show_previewdeck</SetVariable>
                <SetVariable name="ObjectName">SkinSettingsButton</SetVariable>
                <SetVariable name="Size">172f,17f</SetVariable>
                <SetVariable name="Align">left</SetVariable>
                <SetVariable name="state_0_text">      Preview Deck</SetVariable>
                <SetVariable name="state_1_text"> &#10003; Preview Deck</SetVariable>
                <SetVariable name="ConfigKeyPerm">[PreviewDeck],show_previewdeck</SetVariable>
              </Template>

              <Template src="skin:button_2state_persist.xml">
                <SetVariable name="TooltipId">show_previewdeck</SetVariable>
                <SetVariable name="ObjectName">SkinSettingsButton</SetVariable>
                <SetVariable name="Size">172f,17f</SetVariable>
                <SetVariable name="Align">left</SetVariable>
                <SetVariable name="state_0_text">      Enforce compact mode</SetVariable>
                <SetVariable name="state_1_text"> &#10003; Enforce compact mode</SetVariable>
                <SetVariable name="ConfigKeyPerm">[Tango],enforce_netbook_mode</SetVariable>
              </Template>

            </Children>
          </WidgetGroup><!-- /Extras -->
        </Children>
      </WidgetGroup><!-- SkinSettings -->
      <!-- Add a shadow on the right edge -->
      <WidgetGroup>
        <ObjectName>FadeRight</ObjectName>
        <Size>15f,1me</Size>
        <Children/>
      </WidgetGroup>
    </Children>
    <Connection>
      <ConfigKey>[Tango],skin_settings</ConfigKey>
      <BindProperty>visible</BindProperty>
    </Connection>
  </WidgetGroup>
</Template>
