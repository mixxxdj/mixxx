<!--
Description:
  Size-aware container that test wether the library sidebar is collapsed
  (splitter between sidebar and tracks table).
  If collapsed, the WidgetStack flips '[Tango],lib_sidebar_collapsed' to '1'.
  Library maximize toggle is then displayed next to BreadCrumbs/search box.

-->
<Template>
  <WidgetGroup>
    <ObjectName>TEST2</ObjectName>
    <Layout>vertical</Layout>
    <Size>1me,0f</Size>
    <Children>
      <SizeAwareStack>
        <Children>

          <WidgetStack>
            <SizePolicy>me,f</SizePolicy>
            <MaximumSize>139,0</MaximumSize>
            <Children>
              <WidgetGroup trigger="[Tango],lib_sidebar_collapsed"><Size>2f,0f</Size></WidgetGroup>
              <WidgetGroup><Size>2f,0f</Size></WidgetGroup>
            </Children>
          </WidgetStack>

          <WidgetStack>
            <SizePolicy>me,f</SizePolicy>
            <MinimumSize>140,0</MinimumSize>
            <Children>
              <WidgetGroup><Size>2f,0f</Size></WidgetGroup>
              <WidgetGroup trigger="[Tango],lib_sidebar_collapsed"><Size>2f,0f</Size></WidgetGroup>
            </Children>
          </WidgetStack>
        </Children>
      </SizeAwareStack>
    </Children>
  </WidgetGroup>
</Template>
