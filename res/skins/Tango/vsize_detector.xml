<!--
Description:
  Size-aware container for sampler decks and Library.
Modes:
  0-82px    show noting
  83-164px  show Samplers or Library
  165-x     show both, depending on display settings
            Libary expands.
-->
<Template>
  <WidgetGroup>
    <ObjectName>VSizeDetector</ObjectName>
    <Layout>vertical</Layout>
    <SizePolicy>me,me</SizePolicy>
    <Children>

      <WidgetGroup>
        <Layout>vertical</Layout>
        <SizePolicy>me,min</SizePolicy>
        <Children/>
        <Connection>
          <ConfigKey persist="true">[Tango],2or4_fxUnits</ConfigKey>
          <Transform><Not/></Transform>
          <BindProperty>visible</BindProperty>
        </Connection>
      </WidgetGroup>

      <SizeAwareStack>
        <Children>

          <WidgetGroup><!-- 0 -->
            <ObjectName>Library_Samplers_0</ObjectName>
            <Layout>vertical</Layout>
            <SizePolicy>me,max</SizePolicy>
            <MinimumSize>770,0</MinimumSize>
            <MaximumSize>i,70</MaximumSize>
            <Children/>
          </WidgetGroup>

          <WidgetGroup><!-- 1   Samplers mini / Lib / nothing -->
            <ObjectName>Library_Samplers_1</ObjectName>
            <Layout>vertical</Layout>
            <SizePolicy>me,me</SizePolicy>
            <MinimumSize>770,71</MinimumSize>
            <MaximumSize>-1,166</MaximumSize>
            <Children>
            </Children>
          </WidgetGroup><!-- /1   SamplersSamplers mini / Lib / nothing -->

          <WidgetGroup><!-- 2   Samplers maxi / Lib // Samplers mini & Lib -->
            <ObjectName>Library_Samplers_2</ObjectName>
            <Layout>vertical</Layout>
            <SizePolicy>me,me</SizePolicy>
            <MinimumSize>770,167</MinimumSize>
            <MaximumSize>-1,251</MaximumSize>
            <Children>
            </Children>
          </WidgetGroup><!-- /2   Samplers maxi / Lib // Samplers mini & Lib -->

          <WidgetGroup><!-- 3   Samplers mini/Maxi & Lib -->
            <ObjectName>Library_Samplers_3</ObjectName>
            <Layout>vertical</Layout>
            <SizePolicy>me,me</SizePolicy>
            <MinimumSize>770,252</MinimumSize>
            <MaximumSize>-1,-1</MaximumSize>
            <Children>
            </Children>
          </WidgetGroup><!-- /3   Samplers &/ Lib -->

        </Children>
      </SizeAwareStack>

    </Children>
  </WidgetGroup>
</Template>
