    <NextControl>[Tango],sampler_bank_next</NextControl>
    <PrevControl>[Tango],sampler_bank_prev</PrevControl>
    <Children>

      <WidgetGroup>
        <ObjectName>AlignLeft</ObjectName>
        <Layout>horizontal</Layout>
        <Children>
          <Template src="skin:skin_settings_button_sampler_rows.xml">
            <SetVariable name="current">1</SetVariable>
            <SetVariable name="next">2</SetVariable>
            <SetVariable name="prev">2</SetVariable>
          </Template>
        </Children>
      </WidgetGroup>

      <WidgetGroup>
        <ObjectName>AlignLeft</ObjectName>
        <Layout>horizontal</Layout>
        <Children>
          <Template src="skin:skin_settings_button_sampler_rows.xml">
            <SetVariable name="current">2</SetVariable>
            <SetVariable name="next">1</SetVariable>
            <SetVariable name="prev">1</SetVariable>
          </Template>
        </Children>
      </WidgetGroup>

    </Children>
  </WidgetStack>
</Template>
