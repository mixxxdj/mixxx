<!--
Description:
  The skin settings menu, floating on top of main skin window.

  Bug: qss 'qproperty-layoutAlignment' is not respected for stacked layout.
  No way to push SkinSettings to the right edge while keeping the area underneath clickable.
-->
<Template>
  <PushButton>
    <ObjectName>SkinSettingsButton</ObjectName>
    <MinimumSize>70,13</MinimumSize>
    <MaximumSize>182,17</MaximumSize>
    <SizePolicy>min,me</SizePolicy>
    <NumberStates>1</NumberStates>
    <State>
      <Number>0</Number>
      <Text> [ <Variable name="current"/> ] Rows</Text>
      <Alignment>left</Alignment>
    </State>
    <Connection>
      <ConfigKey>[Skin],sampler_row_<Variable name="next"/></ConfigKey>
      <ButtonState>LeftButton</ButtonState>
    </Connection>
    <Connection>
      <ConfigKey>[Skin],sampler_row_<Variable name="prev"/></ConfigKey>
      <ButtonState>RightButton</ButtonState>
    </Connection>
  </PushButton>
</Template>
