<!--
Description:
  Size-aware container that switches between 'netbook_mode' and 'normal_mode'.
  In 'netbook_mode' skin controls are moved from center block to top row,
  so that all specers between left and right half decks/FX units can be removed.
  Waveforms can be much smaller. Though, they will grow to min 50px when beatgrid
  buttons are shown.
  Modes are flipping as soon as FX have enough space to host effects with 6 parameters
  (knobs plus buttons)

Controls:
  [Tango],netbook_normal_stack0
    This is set to '0' persistently in skin.xml so that 'netbook_mode' is triggered
    for widths up to 1259px.
  [Tango],netbook_normal_stack1
    This is set to '1' persistently in skin.xml so that 'normal_mode' is triggered
    for widths from 1260px up.

-->
<Template>
  <SizeAwareStack>
    <Children>

      <WidgetGroup><!-- 0  show skin controls at top edge of window -->
        <Layout>vertical</Layout>
        <SizePolicy>me,max</SizePolicy>
        <MinimumSize>1,1</MinimumSize>
        <MaximumSize>1259,1</MaximumSize>
        <Children>
          <WidgetStack currentpage="[Tango],netbook_normal_stack0" persist="true">
            <Children>
              <WidgetGroup trigger="[Tango],netbook_mode">
                <Size>2f,2f</Size>
                <Children>
                </Children>
                <Connection>
                  <ConfigKey>[Tango],netbook_mode</ConfigKey>
                  <BindProperty>visible</BindProperty>
                </Connection>
              </WidgetGroup>
              <WidgetGroup trigger="[Tango],normal_mode">
                <Size>2f,2f</Size>
                <Children>
                </Children>
                <Connection>
                  <ConfigKey>[Tango],normal_mode</ConfigKey>
                  <BindProperty>visible</BindProperty>
                </Connection>
              </WidgetGroup>
            </Children>
          </WidgetStack>
        </Children>
      </WidgetGroup>

      <WidgetGroup><!-- 1  show skin controls in the center between decks -->
        <Layout>vertical</Layout>
        <SizePolicy>me,me</SizePolicy>
        <MinimumSize>1260,-1</MinimumSize>
        <MaximumSize>-1,-1</MaximumSize>
        <Children>
          <WidgetStack currentpage="[Tango],netbook_normal_stack1" persist="true">
            <Children>
              <WidgetGroup trigger="[Tango],netbook_mode">
                <Size>2f,2f</Size>
                <Children>
                </Children>
                <Connection>
                  <ConfigKey>[Tango],netbook_mode</ConfigKey>
                  <BindProperty>visible</BindProperty>
                </Connection>
              </WidgetGroup>
              <WidgetGroup trigger="[Tango],normal_mode">
                <Size>2f,2f</Size>
                <Children>
                </Children>
                <Connection>
                  <ConfigKey>[Tango],normal_mode</ConfigKey>
                  <BindProperty>visible</BindProperty>
                </Connection>
              </WidgetGroup>
            </Children>
          </WidgetStack>
        </Children>
      </WidgetGroup>

    </Children>
  </SizeAwareStack>
</Template>
