<!--
Description:
  Container for the master level meter, suiting various configurations.
  
Rendering the meters from SVGs makes the entire GUI very laggy on older Macs.
Refer to https://bugs.launchpad.net/mixxx/+bug/1759433
-->
<Template>
  <SingletonDefinition>
    <ObjectName>VuMeterMaster</ObjectName>
    <Children>
      <WidgetGroup><!-- Nest meter so that style gets applied -->
        <Layout>vertical</Layout>
        <SizePolicy>min,min</SizePolicy>
        <Children>
          <WidgetGroup><!-- Master VU incl. Label, + spacer -->
            <ObjectName>VUMeterFloating</ObjectName>
            <Layout>vertical</Layout>
            <SizePolicy>min,min</SizePolicy>
            <Children>
              <WidgetGroup><!-- VU -->
                <Layout>horizontal</Layout>
                <SizePolicy>min,max</SizePolicy>
                <Children>
                  <WidgetGroup><!-- VU Left -->
                    <Layout>stacked</Layout>
                    <Size>4f,-1min</Size>
                    <Children>
                      <StatusLight>
                        <TooltipId>master_VuMeterL</TooltipId>
                        <PathStatusLight>skin:/graphics/vumeter_floating_clipping_over.png</PathStatusLight>
                        <PathBack>skin:/graphics/vumeter_floating_clipping.png</PathBack>
                        <Connection>
                          <ConfigKey>[Master],PeakIndicatorL</ConfigKey>
                        </Connection>
                      </StatusLight>
                      <VuMeter>
                        <PathVu>skin:/graphics/vumeter_floating_over.png</PathVu>
                        <PathBack>skin:/graphics/vumeter_floating.png</PathBack>
                        <Horizontal>false</Horizontal>
                        <PeakHoldSize>4</PeakHoldSize>
                        <PeakHoldTime>800</PeakHoldTime>
                        <PeakFallTime>200</PeakFallTime>
                        <PeakFallStep>5</PeakFallStep>
                        <Connection>
                          <ConfigKey>[Master],VuMeterL</ConfigKey>
                        </Connection>
                      </VuMeter>
                    </Children>
                  </WidgetGroup><!-- /VU Left VU -->

                  <WidgetGroup><!-- Right -->
                    <Layout>stacked</Layout>
                    <Size>4f,-1min</Size>
                    <Children>
                      <StatusLight>
                        <TooltipId>master_VuMeterR</TooltipId>
                        <PathStatusLight>skin:/graphics/vumeter_floating_clipping_over.png</PathStatusLight>
                        <PathBack>skin:/graphics/vumeter_floating_clipping.png</PathBack>
                        <Connection>
                          <ConfigKey>[Master],PeakIndicatorR</ConfigKey>
                        </Connection>
                      </StatusLight>
                      <VuMeter>
                        <PathVu>skin:/graphics/vumeter_floating_over.png</PathVu>
                        <PathBack>skin:/graphics/vumeter_floating.png</PathBack>
                        <Horizontal>false</Horizontal>
                        <PeakHoldSize>4</PeakHoldSize>
                        <PeakHoldTime>800</PeakHoldTime>
                        <PeakFallTime>200</PeakFallTime>
                        <PeakFallStep>5</PeakFallStep>
                        <Connection>
                          <ConfigKey>[Master],VuMeterR</ConfigKey>
                        </Connection>
                      </VuMeter>
                    </Children>
                  </WidgetGroup><!-- /VU Right -->
                </Children>
              </WidgetGroup><!-- /VU -->

              <WidgetGroup><Size>0f,4f</Size></WidgetGroup>

              <WidgetGroup>
                <ObjectName>VUMeterMasterLabel</ObjectName>
                <Size>16f,20f</Size>
              </WidgetGroup>

              <WidgetGroup><Size>0f,1f</Size></WidgetGroup>
            </Children>
          </WidgetGroup>
        </Children>
      </WidgetGroup>
    </Children>
  </SingletonDefinition>

  <WidgetGroup>
    <Layout>horizontal</Layout>
    <SizePolicy>max,min</SizePolicy>
    <Children>

      <!-- Master VU when mixer is hidden but permament level meters are shown -->
      <WidgetGroup>
        <Layout>horizontal</Layout>
        <SizePolicy>min,min</SizePolicy>
        <Children>
          <WidgetGroup>
            <ObjectName></ObjectName>
            <Size>min,min</Size>
            <Layout>vertical</Layout>
            <Children>
              <SingletonContainer>
                <ObjectName>VuMeterMaster</ObjectName>
              </SingletonContainer>
            </Children>
            <Connection>
              <ConfigKey persist="true">[Tango],vumeter</ConfigKey>
              <BindProperty>visible</BindProperty>
            </Connection>
          </WidgetGroup>
        </Children>
        <Connection>
          <ConfigKey persist="true">[Master],show_mixer</ConfigKey>
          <Transform><Not/></Transform>
          <BindProperty>visible</BindProperty>
        </Connection>
      </WidgetGroup>
      <!-- /Master VU when mixer is hidden but permament level meters are shown -->

      <WidgetGroup><!-- Master VU when mixer is shown -->
        <Layout>horizontal</Layout>
        <SizePolicy>min,min</SizePolicy>
        <Children>
          <SingletonContainer>
            <ObjectName>VuMeterMaster</ObjectName>
          </SingletonContainer>
        </Children>
        <Connection>
          <ConfigKey persist="true">[Master],show_mixer</ConfigKey>
          <BindProperty>visible</BindProperty>
        </Connection>
      </WidgetGroup>

    </Children>
  </WidgetGroup>
</Template>
