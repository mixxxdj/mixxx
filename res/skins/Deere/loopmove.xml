             <SetVariable name="state_0_text">4</SetVariable>
             <SetVariable name="state_0_pressed"></SetVariable>
             <SetVariable name="state_0_unpressed"></SetVariable>
             <SetVariable name="left_connection_control">[LoopMove],next</SetVariable>
