<!DOCTYPE template>
<!-- Master level meter -->
<Template>
  <WidgetGroup>
    <ObjectName>MasterVu</ObjectName>
    <Layout>vertical</Layout>
    <MinimumSize>28,60</MinimumSize>
    <MaximumSize>28,300</MaximumSize>
    <SizePolicy>min,me</SizePolicy>
    <Children>

      <WidgetGroup>
        <ObjectName>main_VuMeter_Group</ObjectName>
        <SizePolicy>f,me</SizePolicy>
        <Layout>horizontal</Layout>
        <Children>
          <Template src="skin:vumeter_v.xml">
            <SetVariable name="group">[Master]</SetVariable>
            <SetVariable name="side">L</SetVariable>
            <SetVariable name="tooltip_meter">main_VuMeterL</SetVariable>
            <SetVariable name="tooltip_clip">main_PeakIndicatorL</SetVariable>
          </Template>
          <Template src="skin:vumeter_v.xml">
            <SetVariable name="group">[Master]</SetVariable>
            <SetVariable name="side">R</SetVariable>
            <SetVariable name="tooltip_meter">main_VuMeterR</SetVariable>
            <SetVariable name="tooltip_clip">main_PeakIndicatorR</SetVariable>
          </Template>
        </Children>
      </WidgetGroup>

    </Children>
  </WidgetGroup>
</Template>
