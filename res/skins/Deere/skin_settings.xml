<!DOCTYPE template>
<!--
  Description:
    The skin settings floating widget.
-->
<Template>
  <WidgetGroup>
    <ObjectName>SkinSettings</ObjectName>
    <Layout>vertical</Layout>
    <Size>180f,-1min</Size>
    <Children>
      <WidgetGroup>
        <ObjectName>SkinSettingsTop</ObjectName>
        <Layout>horizontal</Layout>
        <Children>
          <Label>
            <ObjectName>h1</ObjectName>
            <SizePolicy>e,min</SizePolicy>
            <Text>Skin Settings</Text>
          </Label>
          <Template src="skin:left_2state_button.xml">
            <SetVariable name="TooltipId"></SetVariable>
            <SetVariable name="Tooltip">Show/hide skin settings</SetVariable>
            <SetVariable name="ObjectName">SidebarShowHideSkinSettingsButton</SetVariable>
            <SetVariable name="MinimumSize"><Variable name="SquareButtonMinimumSize"/></SetVariable>
            <SetVariable name="MaximumSize"><Variable name="SquareButtonMaximumSize"/></SetVariable>
            <SetVariable name="SizePolicy"><Variable name="SquareButtonSizePolicy"/></SetVariable>
            <SetVariable name="state_0_text"></SetVariable>
            <SetVariable name="state_0_pressed">icon/ic_menu_48px.svg</SetVariable>
            <SetVariable name="state_0_unpressed">icon/ic_menu_48px.svg</SetVariable>
            <SetVariable name="state_1_text"></SetVariable>
            <SetVariable name="state_1_pressed">icon/ic_menu_48px.svg</SetVariable>
            <SetVariable name="state_1_unpressed">icon/ic_menu_48px.svg</SetVariable>
            <SetVariable name="left_connection_control">[Deere],show_skin_settings</SetVariable>
          </Template>
        </Children>
      </WidgetGroup>

      <WidgetGroup>
        <ObjectName>h3</ObjectName>
        <Layout>vertical</Layout>
        <SizePolicy>me,min</SizePolicy>
        <Children>

          <PushButton>
            <TooltipId>toggle_parallel_waveforms</TooltipId>
            <Size>80me,20f</Size>
            <NumberStates>2</NumberStates>
            <State>
              <Number>0</Number>
              <Text>&#9898; Parallel Waveforms</Text>
              <Alignment>left</Alignment>
            </State>
            <State>
              <Number>1</Number>
              <Text>&#9899; Parallel Waveforms</Text>
              <Alignment>left</Alignment>
            </State>
            <Connection>
              <ConfigKey>[Deere],show_parallel_waveforms</ConfigKey>
            </Connection>
          </PushButton>

          <PushButton>
            <TooltipId>toggle_4decks</TooltipId>
            <Size>80me,20f</Size>
            <NumberStates>2</NumberStates>
            <State>
              <Number>0</Number>
              <Text>&#9898; 4 Decks</Text>
              <Alignment>left</Alignment>
            </State>
            <State>
              <Number>1</Number>
              <Text>&#9899; 4 Decks</Text>
              <Alignment>left</Alignment>
            </State>
            <Connection>
              <ConfigKey>[Master],show_4decks</ConfigKey>
              <EmitOnPressAndRelease>true</EmitOnPressAndRelease>
            </Connection>
          </PushButton>

        </Children>
      </WidgetGroup>

      <!-- Deck Settings -->
      <Label>
      <ObjectName>h2</ObjectName>
      <Text>Decks</Text>
      </Label>

      <WidgetGroup>
        <ObjectName>h3</ObjectName>
        <Layout>vertical</Layout>
        <SizePolicy>me,min</SizePolicy>
        <Children>

          <PushButton>
            <Size>80me,20f</Size>
            <NumberStates>2</NumberStates>
            <State>
              <Number>0</Number>
              <Text>&#9898; Cover Art</Text>
              <Alignment>left</Alignment>
            </State>
            <State>
              <Number>1</Number>
              <Text>&#9899; Cover Art</Text>
              <Alignment>left</Alignment>
            </State>
            <Connection>
              <ConfigKey>[Master],show_coverart</ConfigKey>
            </Connection>
          </PushButton>

          <PushButton>
            <Size>80me,20f</Size>
            <NumberStates>2</NumberStates>
            <State>
              <Number>0</Number>
              <Text>&#9898; Spinnies</Text>
              <Alignment>left</Alignment>
            </State>
            <State>
              <Number>1</Number>
              <Text>&#9899; Spinnies</Text>
              <Alignment>left</Alignment>
            </State>
            <Connection>
              <ConfigKey>[Master],show_spinnies</ConfigKey>
            </Connection>
          </PushButton>

          <PushButton>
            <Size>80me,20f</Size>
            <NumberStates>2</NumberStates>
            <State>
              <Number>0</Number>
              <Text>&#9898; Artist &amp; Track Title</Text>
              <Alignment>left</Alignment>
            </State>
            <State>
              <Number>1</Number>
              <Text>&#9899; Artist &amp; Track Title</Text>
              <Alignment>left</Alignment>
            </State>
            <Connection>
              <ConfigKey>[Deere],show_track_info</ConfigKey>
            </Connection>
          </PushButton>

          <PushButton>
            <Size>80me,20f</Size>
            <NumberStates>2</NumberStates>
            <State>
              <Number>0</Number>
              <Text>&#9898; BPM</Text>
              <Alignment>left</Alignment>
            </State>
            <State>
              <Number>1</Number>
              <Text>&#9899; BPM</Text>
              <Alignment>left</Alignment>
            </State>
            <Connection>
              <ConfigKey>[Deere],show_bpm_info</ConfigKey>
            </Connection>
          </PushButton>

          <PushButton>
            <Size>80me,20f</Size>
            <NumberStates>2</NumberStates>
            <State>
              <Number>0</Number>
              <Text>&#9898; Star Rating</Text>
              <Alignment>left</Alignment>
            </State>
            <State>
              <Number>1</Number>
              <Text>&#9899; Star Rating</Text>
              <Alignment>left</Alignment>
            </State>
            <Connection>
              <ConfigKey>[Deere],show_starrating</ConfigKey>
            </Connection>
          </PushButton>

          <PushButton>
            <Size>80me,20f</Size>
            <NumberStates>2</NumberStates>
            <State>
              <Number>0</Number>
              <Text>&#9898; More Hotcues</Text>
              <Alignment>left</Alignment>
            </State>
            <State>
              <Number>1</Number>
              <Text>&#9899; More Hotcues</Text>
              <Alignment>left</Alignment>
            </State>
            <Connection>
              <ConfigKey>[Deere],show_more_hotcues</ConfigKey>
            </Connection>
          </PushButton>

          <PushButton>
            <Size>80me,20f</Size>
            <NumberStates>2</NumberStates>
            <State>
              <Number>0</Number>
              <Text>&#9898; Vinyl Control Options</Text>
              <Alignment>left</Alignment>
            </State>
            <State>
              <Number>1</Number>
              <Text>&#9899; Vinyl Control Options</Text>
              <Alignment>left</Alignment>
            </State>
            <Connection>
              <ConfigKey>[VinylControl],show_vinylcontrol</ConfigKey>
            </Connection>
          </PushButton>

          <PushButton>
            <TooltipId>toggle_deck_controls</TooltipId>
            <Size>80me,20f</Size>
            <NumberStates>2</NumberStates>
            <State>
              <Number>0</Number>
              <Text>&#9898; Minimal Controls</Text>
              <Alignment>left</Alignment>
            </State>
            <State>
              <Number>1</Number>
              <Text>&#9899; Minimal Controls</Text>
              <Alignment>left</Alignment>
            </State>
            <Connection>
              <ConfigKey>[Deere],show_minimal_deck_controls</ConfigKey>
            </Connection>
          </PushButton>
        </Children>
      </WidgetGroup>

      <Label>
        <ObjectName>h2</ObjectName>
        <Text>Mixer</Text>
      </Label>

      <WidgetGroup>
        <ObjectName>h3</ObjectName>
        <Layout>vertical</Layout>
        <SizePolicy>me,min</SizePolicy>
        <Children>
          <PushButton>
            <TooltipId>show_mixer</TooltipId>
            <Size>80me,20f</Size>
            <NumberStates>2</NumberStates>
            <State>
              <Number>0</Number>
              <Text>&#9898; Show</Text>
              <Alignment>left</Alignment>
            </State>
            <State>
              <Number>1</Number>
              <Text>&#9899; Show</Text>
              <Alignment>left</Alignment>
            </State>
            <Connection>
              <ConfigKey>[Master],show_mixer</ConfigKey>
            </Connection>
          </PushButton>

          <PushButton>
            <TooltipId>show_eqs</TooltipId>
            <Size>80me,20f</Size>
            <NumberStates>2</NumberStates>
            <State>
              <Number>0</Number>
              <Text>&#9898; Equalizers</Text>
              <Alignment>left</Alignment>
            </State>
            <State>
              <Number>1</Number>
              <Text>&#9899; Equalizers</Text>
              <Alignment>left</Alignment>
            </State>
            <Connection>
              <ConfigKey>[Master],show_eqs</ConfigKey>
            </Connection>
          </PushButton>

          <PushButton>
            <TooltipId>show_eqs</TooltipId>
            <Size>80me,20f</Size>
            <NumberStates>2</NumberStates>
            <State>
              <Number>0</Number>
              <Text>&#9898; Faders</Text>
              <Alignment>left</Alignment>
            </State>
            <State>
              <Number>1</Number>
              <Text>&#9899; Faders</Text>
              <Alignment>left</Alignment>
            </State>
            <Connection>
              <ConfigKey>[Master],show_faders</ConfigKey>
            </Connection>
          </PushButton>

          <PushButton>
            <Size>80me,20f</Size>
            <NumberStates>2</NumberStates>
            <State>
              <Number>0</Number>
              <Text>&#9898; Crossfader</Text>
              <Alignment>left</Alignment>
            </State>
            <State>
              <Number>1</Number>
              <Text>&#9899; Crossfader</Text>
              <Alignment>left</Alignment>
            </State>
            <Connection>
              <ConfigKey>[Deere],show_crossfader</ConfigKey>
            </Connection>
          </PushButton>

        </Children>
      </WidgetGroup>

      <!-- Sampler Settings -->
      <Label>
        <ObjectName>h2</ObjectName>
        <Text>Samplers</Text>
      </Label>

      <WidgetGroup>
        <ObjectName>h3</ObjectName>
        <Layout>vertical</Layout>
        <SizePolicy>me,max</SizePolicy>
        <Children>

          <WidgetStack currentpage="[Deere],sampler_row_current" >
            <NextControl>[Deere],sampler_bank_next</NextControl>
            <PrevControl>[Deere],sampler_bank_prev</PrevControl>
            <Children>

              <WidgetGroup>
                <Layout>horizontal</Layout>
                <Children>
                  <Template src="skin:sampler_rows_selection_button.xml">
                    <SetVariable name="current">1</SetVariable>
                    <SetVariable name="next">2</SetVariable>
                    <SetVariable name="prev">8</SetVariable>
                  </Template>
                </Children>
              </WidgetGroup>

              <WidgetGroup>
                <Layout>horizontal</Layout>
                <Children>
                  <Template src="skin:sampler_rows_selection_button.xml">
                    <SetVariable name="current">2</SetVariable>
                    <SetVariable name="next">3</SetVariable>
                    <SetVariable name="prev">1</SetVariable>
                  </Template>
                </Children>
              </WidgetGroup>

              <WidgetGroup>
                <Layout>horizontal</Layout>
                <Children>
                  <Template src="skin:sampler_rows_selection_button.xml">
                    <SetVariable name="current">3</SetVariable>
                    <SetVariable name="next">4</SetVariable>
                    <SetVariable name="prev">2</SetVariable>
                  </Template>
                </Children>
              </WidgetGroup>

              <WidgetGroup>
                <Layout>horizontal</Layout>
                <Children>
                  <Template src="skin:sampler_rows_selection_button.xml">
                    <SetVariable name="current">4</SetVariable>
                    <SetVariable name="next">5</SetVariable>
                    <SetVariable name="prev">3</SetVariable>
                  </Template>
                </Children>
              </WidgetGroup>

              <WidgetGroup>
                <Layout>horizontal</Layout>
                <Children>
                  <Template src="skin:sampler_rows_selection_button.xml">
                    <SetVariable name="current">5</SetVariable>
                    <SetVariable name="next">6</SetVariable>
                    <SetVariable name="prev">4</SetVariable>
                  </Template>
                </Children>
              </WidgetGroup>

              <WidgetGroup>
                <Layout>horizontal</Layout>
                <Children>
                  <Template src="skin:sampler_rows_selection_button.xml">
                    <SetVariable name="current">6</SetVariable>
                    <SetVariable name="next">7</SetVariable>
                    <SetVariable name="prev">5</SetVariable>
                  </Template>
                </Children>
              </WidgetGroup>

              <WidgetGroup>
                <Layout>horizontal</Layout>
                <Children>
                  <Template src="skin:sampler_rows_selection_button.xml">
                    <SetVariable name="current">7</SetVariable>
                    <SetVariable name="next">8</SetVariable>
                    <SetVariable name="prev">6</SetVariable>
                  </Template>
                </Children>
              </WidgetGroup>

              <WidgetGroup>
                <Layout>horizontal</Layout>
                <Children>
                  <Template src="skin:sampler_rows_selection_button.xml">
                    <SetVariable name="current">8</SetVariable>
                    <SetVariable name="next">1</SetVariable>
                    <SetVariable name="prev">7</SetVariable>
                  </Template>
                </Children>
              </WidgetGroup>

            </Children>
          </WidgetStack>

        </Children>
      </WidgetGroup>

      <!-- Effects Settings -->
      <Label>
        <ObjectName>h2</ObjectName>
        <Text>Effects</Text>
      </Label>

      <WidgetGroup>
        <ObjectName>h3</ObjectName>
        <Layout>vertical</Layout>
        <SizePolicy>me,min</SizePolicy>
        <Children>

          <PushButton>
            <Size>80me,20f</Size>
            <NumberStates>2</NumberStates>
            <State>
              <Number>0</Number>
              <Text>&#9898; Superknob</Text>
              <Alignment>left</Alignment>
            </State>
            <State>
              <Number>1</Number>
              <Text>&#9899; Superknob</Text>
              <Alignment>left</Alignment>
            </State>
            <Connection>
              <ConfigKey>[Master],show_superknobs</ConfigKey>
            </Connection>
          </PushButton>

          <PushButton>
            <Size>80me,20f</Size>
            <NumberStates>2</NumberStates>
            <State>
              <Number>0</Number>
              <Text>&#9898; 4 Effect Units</Text>
              <Alignment>left</Alignment>
            </State>
            <State>
              <Number>1</Number>
              <Text>&#9899; 4 Effect Units</Text>
              <Alignment>left</Alignment>
            </State>
            <Connection>
              <ConfigKey>[Master],show_4effectunits</ConfigKey>
            </Connection>
          </PushButton>
        </Children>
      </WidgetGroup>

      <!-- Library Settings -->
      <Label>
        <ObjectName>h2</ObjectName>
        <Text>Library</Text>
      </Label>

      <WidgetGroup>
        <ObjectName>h3</ObjectName>
        <Layout>vertical</Layout>
        <SizePolicy>me,min</SizePolicy>
        <Children>
          <PushButton>
            <TooltipId>show_library</TooltipId>
            <Size>80me,20f</Size>
            <NumberStates>2</NumberStates>
            <State>
              <Number>0</Number>
              <Text>&#9898; Show</Text>
              <Alignment>left</Alignment>
            </State>
            <State>
              <Number>1</Number>
              <Text>&#9899; Show</Text>
              <Alignment>left</Alignment>
            </State>
            <Connection>
              <ConfigKey>[Library],show_library</ConfigKey>
              <EmitOnPressAndRelease>true</EmitOnPressAndRelease>
            </Connection>
          </PushButton>

          <PushButton>
            <TooltipId>show_previewdeck</TooltipId>
            <Size>80me,20f</Size>
            <NumberStates>2</NumberStates>
            <State>
              <Number>0</Number>
              <Text>&#9898; Preview Deck</Text>
              <Alignment>left</Alignment>
            </State>
            <State>
              <Number>1</Number>
              <Text>&#9899; Preview Deck</Text>
              <Alignment>left</Alignment>
            </State>
            <Connection>
              <ConfigKey>[PreviewDeck],show_previewdeck</ConfigKey>
            </Connection>
          </PushButton>

          <PushButton>
            <TooltipId>show_coverart</TooltipId>
            <Size>80me,20f</Size>
            <NumberStates>2</NumberStates>
            <State>
              <Number>0</Number>
              <Text>&#9898; Cover Art</Text>
              <Alignment>left</Alignment>
            </State>
            <State>
              <Number>1</Number>
              <Text>&#9899; Cover Art</Text>
              <Alignment>left</Alignment>
            </State>
            <Connection>
              <ConfigKey>[Library],show_coverart</ConfigKey>
            </Connection>
          </PushButton>
        </Children>
      </WidgetGroup>

      <Template src="skin:spacer_v.xml"/>

    </Children>
    <Connection>
      <ConfigKey>[Deere],show_skin_settings</ConfigKey>
      <BindProperty>visible</BindProperty>
    </Connection>
  </WidgetGroup>
</Template>
