<!DOCTYPE template>
<!-- Main level meter -->
<Template>
  <WidgetGroup>
    <Layout>vertical</Layout>
    <SizePolicy>me,me</SizePolicy>
    <Children>

      <!-- 2 Decks: Spacer sized like channel Gain knob -->
      <WidgetGroup>
        <Size>0min,28f</Size>
        <Connection>
          <ConfigKey>[Skin],large_vu</ConfigKey>
          <Transform><Not/></Transform>
          <BindProperty>visible</BindProperty>
        </Connection>
      </WidgetGroup>

      <WidgetGroup>
        <Layout>horizontal</Layout>
        <SizePolicy>me,me</SizePolicy>
        <Children>
          <Template src="skin:vumeter_main.xml"/>
        </Children>
      </WidgetGroup>

    </Children>
  </WidgetGroup>
</Template>
