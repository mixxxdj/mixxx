<!DOCTYPE template>
<!--
  Description:
    Main deck container.
-->
<Template>
  <WidgetGroup>
    <ObjectName>MainDeckContainer</ObjectName>
    <Layout>vertical</Layout>
    <SizePolicy>me,me</SizePolicy>
    <Children>

      <WidgetGroup>
        <Layout>vertical</Layout>
        <Children>

          <Splitter>
            <ObjectName>StackedWaveformSplitter</ObjectName>
            <Orientation>vertical</Orientation>
            <Size>-1me,-1me</Size>
            <SplitSizesConfigKey>[Deere],StackedWaveformsDecksSplit</SplitSizesConfigKey>
            <Children>
              <WidgetGroup>
                <ObjectName>StackedWaveformsContainer</ObjectName>
                <Layout>vertical</Layout>
                <Children>

                  <Template src="skin:deck_visual_row.xml">
                    <SetVariable name="i">1</SetVariable>
                    <SetVariable name="group">[Channel<Variable name="i"/>]</SetVariable>
                    <!-- Traditional Blue -->
                    <SetVariable name="DeckSignalColor">#007BCD</SetVariable>
                    <SetVariable name="DeckBackgroundColor">#333333</SetVariable>
                    <SetVariable name="control_show_spinny">[Spinny<Variable name="i"/>],show_spinny</SetVariable>
                  </Template>
                  <Template src="skin:deck_visual_row.xml">
                    <SetVariable name="i">2</SetVariable>
                    <SetVariable name="group">[Channel<Variable name="i"/>]</SetVariable>
                    <!-- Violet -->
                    <SetVariable name="DeckSignalColor">#B500B5</SetVariable>
                    <SetVariable name="DeckBackgroundColor">#333333</SetVariable>
                    <SetVariable name="control_show_spinny">[Spinny<Variable name="i"/>],show_spinny</SetVariable>
                  </Template>

                </Children>
              </WidgetGroup>

              <WidgetGroup>
                <Layout>horizontal</Layout>
                <Size>-1,150min</Size>
                <MaximumSize>-1,230</MaximumSize>
                <Children>
                  <SingletonContainer>
                    <ObjectName>DecksMixerSingleton</ObjectName>
                  </SingletonContainer>
                </Children>
              </WidgetGroup>

            </Children>
          </Splitter>

        </Children>
        <Connection>
          <ConfigKey persist="true">[Deere],show_stacked_waveforms</ConfigKey>
          <BindProperty>visible</BindProperty>
        </Connection>
      </WidgetGroup>

      <WidgetGroup>
        <Layout>vertical</Layout>
        <Children>

          <Splitter>
            <ObjectName>StackedWaveformSplitter</ObjectName>
            <Orientation>vertical</Orientation>
            <Size>-1me,-1me</Size>
            <SplitSizesConfigKey>[Deere],StackedWaveformsDecksSplit</SplitSizesConfigKey>
            <Children>

              <WidgetGroup>
                <Layout>horizontal</Layout>
                <Size>-1,155max</Size>
                <MaximumSize>-1,315</MaximumSize>
                <Children>
                  <SingletonContainer>
                    <ObjectName>DecksMixerSingleton</ObjectName>
                  </SingletonContainer>
                </Children>
              </WidgetGroup>

            </Children>
          </Splitter>

        </Children>
        <Connection>
          <ConfigKey persist="true">[Deere],show_stacked_waveforms</ConfigKey>
          <BindProperty>visible</BindProperty>
          <Transform>
            <Not/>
          </Transform>
        </Connection>
      </WidgetGroup>

    </Children>
    <Connection>
      <ConfigKey persist="true">[Master],show_4decks</ConfigKey>
      <BindProperty>visible</BindProperty>
      <Transform>
        <Not/>
      </Transform>
    </Connection>
  </WidgetGroup>

