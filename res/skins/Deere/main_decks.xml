<!DOCTYPE template>
<!--
  Description:
    Main deck container.
-->
<Template>
  <WidgetGroup>
    <ObjectName>MainDeckContainer</ObjectName>
    <Layout>vertical</Layout>
    <SizePolicy>me,me</SizePolicy>
    <Children>

      <WidgetGroup>
        <Layout>vertical</Layout>
        <Children>

          <Splitter>
            <ObjectName>DeckSplitter</ObjectName>
            <Orientation>vertical</Orientation>
            <Size>-1me,-1me</Size>
            <SplitSizesConfigKey>[Deere],DeckSplitterStackedWaveforms</SplitSizesConfigKey>
            <Children>
              <WidgetGroup>
                <ObjectName>StackedWaveformsContainer</ObjectName>
                <Layout>vertical</Layout>
                <Children>

                  <SingletonContainer>
                    <ObjectName>DeckVisualRow1</ObjectName>
                  </SingletonContainer>
                  <SingletonContainer>
                    <ObjectName>DeckVisualRow2</ObjectName>
                  </SingletonContainer>

                </Children>
              </WidgetGroup>

              <WidgetGroup>
                <Layout>horizontal</Layout>
                <Size>-1,150min</Size>
                <MaximumSize>-1,230</MaximumSize>
                <Children>
                  <SingletonContainer>
                    <ObjectName>DecksMixerSingleton</ObjectName>
                  </SingletonContainer>
                </Children>
              </WidgetGroup>

            </Children>
          </Splitter>

        </Children>
        <Connection>
          <ConfigKey>[Deere],show_stacked_waveforms</ConfigKey>
          <BindProperty>visible</BindProperty>
        </Connection>
      </WidgetGroup>

      <WidgetGroup>
        <Layout>vertical</Layout>
        <Children>

          <Splitter>
            <ObjectName>DeckSplitter</ObjectName>
            <Orientation>vertical</Orientation>
            <Size>-1me,-1me</Size>
            <SplitSizesConfigKey>[Deere],DeckSplitterSplitWaveforms</SplitSizesConfigKey>
            <Children>

              <WidgetGroup>
                <Layout>horizontal</Layout>
                <Size>-1,155max</Size>
                <MaximumSize>-1,315</MaximumSize>
                <Children>
                  <SingletonContainer>
                    <ObjectName>DecksMixerSingleton</ObjectName>
                  </SingletonContainer>
                </Children>
              </WidgetGroup>

            </Children>
          </Splitter>

        </Children>
        <Connection>
          <ConfigKey>[Deere],show_stacked_waveforms</ConfigKey>
          <BindProperty>visible</BindProperty>
          <Transform>
            <Not/>
          </Transform>
        </Connection>
      </WidgetGroup>

    </Children>
    <Connection>
      <ConfigKey>[Master],show_4decks</ConfigKey>
      <BindProperty>visible</BindProperty>
      <Transform>
        <Not/>
      </Transform>
    </Connection>
  </WidgetGroup>

  <WidgetGroup>
    <ObjectName>MainDeckContainer</ObjectName>
    <Layout>vertical</Layout>
    <SizePolicy>me,me</SizePolicy>
    <Children>

      <WidgetGroup>
        <Layout>vertical</Layout>
        <Children>

          <Splitter>
            <ObjectName>DeckSplitter</ObjectName>
            <Orientation>vertical</Orientation>
            <Size>-1me,-1me</Size>
            <SplitSizesConfigKey>[Deere],DeckSplitterStackedWaveforms</SplitSizesConfigKey>
            <SplitSizes>2,8</SplitSizes>
            <Children>
              <!-- Is displayed if the stacked waveforms option is activated in the skin settings -->
              <WidgetGroup>
                <ObjectName>StackedWaveformsContainer</ObjectName>
                <Layout>vertical</Layout>
                <Children>

                  <SingletonContainer>
                    <ObjectName>DeckVisualRow3</ObjectName>
                  </SingletonContainer>
                  <SingletonContainer>
                    <ObjectName>DeckVisualRow1</ObjectName>
                  </SingletonContainer>
                  <SingletonContainer>
                    <ObjectName>DeckVisualRow2</ObjectName>
                  </SingletonContainer>
                  <SingletonContainer>
                    <ObjectName>DeckVisualRow4</ObjectName>
                  </SingletonContainer>

                </Children>
              </WidgetGroup>

              <WidgetGroup>
                <Layout>horizontal</Layout>
                <Size>-1,310min</Size>
                <MaximumSize>-1,460</MaximumSize>
                <Children>
                  <SingletonContainer>
                    <ObjectName>DecksMixerSingleton</ObjectName>
                  </SingletonContainer>
                </Children>
              </WidgetGroup>

            </Children>
          </Splitter>

        </Children>
        <Connection>
          <ConfigKey>[Deere],show_stacked_waveforms</ConfigKey>
          <BindProperty>visible</BindProperty>
        </Connection>
      </WidgetGroup>

      <WidgetGroup>
        <Layout>vertical</Layout>
        <Children>

          <Splitter>
            <ObjectName>DeckSplitter</ObjectName>
            <Orientation>vertical</Orientation>
            <Size>-1me,-1me</Size>
            <SplitSizesConfigKey>[Deere],DeckSplitterSplitWaveforms</SplitSizesConfigKey>
            <Children>

              <WidgetGroup>
                <Layout>horizontal</Layout>
                <MaximumSize>-1,630</MaximumSize>
                <Children>
                  <SingletonContainer>
                    <ObjectName>DecksMixerSingleton</ObjectName>
                  </SingletonContainer>
                </Children>
              </WidgetGroup>

            </Children>
          </Splitter>

        </Children>
        <Connection>
          <ConfigKey>[Deere],show_stacked_waveforms</ConfigKey>
          <BindProperty>visible</BindProperty>
          <Transform>
            <Not/>
          </Transform>
        </Connection>
      </WidgetGroup>

    </Children>
    <Connection>
      <ConfigKey>[Master],show_4decks</ConfigKey>
      <BindProperty>visible</BindProperty>
    </Connection>
  </WidgetGroup>
</Template>
