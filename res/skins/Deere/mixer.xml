<!DOCTYPE template>
<!--
  Description:
    The mixer section.
-->
<Template>
  <WidgetGroup>
    <ObjectName>Mixer</ObjectName>
    <Layout>vertical</Layout>
    <SizePolicy>f,min</SizePolicy>
    <Children>
      <WidgetGroup>
        <ObjectName>DeckControls</ObjectName>
        <SizePolicy>min,min</SizePolicy>
        <Layout>horizontal</Layout>
        <Children>
          <WidgetGroup>
            <ObjectName>DeckControlsSplitWaveforms</ObjectName>
            <Layout>horizontal</Layout>
            <Children>
              <WidgetGroup>
                <Layout>horizontal</Layout>
                <Children>
                  <Template src="skin:left_deck_mixer_controls.xml">
                    <SetVariable name="i">3</SetVariable>
                  </Template>
                </Children>
                <Connection>
                  <ConfigKey>[Master],show_4decks</ConfigKey>
                  <BindProperty>visible</BindProperty>
                </Connection>
              </WidgetGroup>
              <Template src="skin:left_deck_mixer_controls.xml">
                <SetVariable name="i">1</SetVariable>
              </Template>

              <Template src="skin:vumeter_master.xml"/>

              <Template src="skin:right_deck_mixer_controls.xml">
                <SetVariable name="i">2</SetVariable>
              </Template>
              <WidgetGroup>
                <Layout>horizontal</Layout>
                <Children>
                  <Template src="skin:right_deck_mixer_controls.xml">
                    <SetVariable name="i">4</SetVariable>
                  </Template>
                </Children>
                <Connection>
                  <ConfigKey>[Master],show_4decks</ConfigKey>
                  <BindProperty>visible</BindProperty>
                </Connection>
              </WidgetGroup>
            </Children>
            <Connection>
              <ConfigKey persist="true">[Deere],show_stacked_waveforms</ConfigKey>
              <BindProperty>visible</BindProperty>
              <Transform>
                <Not/>
              </Transform>
            </Connection>
          </WidgetGroup>

          <WidgetGroup>
            <ObjectName>DeckControlsStackedWaveforms</ObjectName>
            <Layout>horizontal</Layout>
            <Children>
              <WidgetGroup>
                <ObjectName>DeckControlsStackedWaveforms2Decks</ObjectName>
                <Layout>horizontal</Layout>
                <Children>
                  <Template src="skin:left_deck_mixer_controls.xml">
                    <SetVariable name="i">1</SetVariable>
                  </Template>

                  <Template src="skin:vumeter_master.xml"/>

                  <Template src="skin:right_deck_mixer_controls.xml">
                    <SetVariable name="i">2</SetVariable>
                  </Template>
                </Children>
                <Connection>
                  <ConfigKey persist="true">[Master],show_4decks</ConfigKey>
                  <BindProperty>visible</BindProperty>
                  <Transform>
                    <Not/>
                  </Transform>
                </Connection>
              </WidgetGroup>

              <WidgetGroup>
                <ObjectName>DeckControlsStackedWaveforms4Decks</ObjectName>
                <Layout>horizontal</Layout>
                <Children>
                  <WidgetGroup>
                    <Layout>horizontal</Layout>
                    <Children>
                      <WidgetGroup>
                        <ObjectName>DeckControlsStackedWaveforms4DecksNoEQs</ObjectName>
                        <Layout>horizontal</Layout>
                        <Children>
                          <Template src="skin:left_deck_mixer_controls.xml">
                            <SetVariable name="i">3</SetVariable>
                          </Template>
                          <Template src="skin:left_deck_mixer_controls.xml">
                            <SetVariable name="i">1</SetVariable>
                          </Template>

                          <Template src="skin:vumeter_master.xml"/>

                          <Template src="skin:right_deck_mixer_controls.xml">
                            <SetVariable name="i">2</SetVariable>
                          </Template>
                          <Template src="skin:right_deck_mixer_controls.xml">
                            <SetVariable name="i">4</SetVariable>
                          </Template>
                        </Children>
                        <Connection>
                          <ConfigKey persist="true">[Master],show_eqs</ConfigKey>
                          <BindProperty>visible</BindProperty>
                          <Transform>
                            <Not/>
                          </Transform>
                        </Connection>
                      </WidgetGroup>

                      <WidgetGroup>
                        <ObjectName>DeckControlsStackedWaveforms4DecksWithEQs</ObjectName>
                        <Layout>horizontal</Layout>
                        <Children>
                          <Template src="skin:deck_mixer_controls_condensed.xml">
                            <SetVariable name="i">3</SetVariable>
                          </Template>
                          <Template src="skin:deck_mixer_controls_condensed.xml">
                            <SetVariable name="i">1</SetVariable>
                          </Template>

                          <Template src="skin:vumeter_master.xml"/>

                          <Template src="skin:deck_mixer_controls_condensed.xml">
                            <SetVariable name="i">2</SetVariable>
                          </Template>
                          <Template src="skin:deck_mixer_controls_condensed.xml">
                            <SetVariable name="i">4</SetVariable>
                          </Template>
                        </Children>
                        <Connection>
                          <ConfigKey persist="true">[Master],show_eqs</ConfigKey>
                          <BindProperty>visible</BindProperty>
                        </Connection>
                      </WidgetGroup>
                    </Children>
                  </WidgetGroup>

                </Children>
                <Connection>
                  <ConfigKey persist="true">[Master],show_4decks</ConfigKey>
                  <BindProperty>visible</BindProperty>
                </Connection>
              </WidgetGroup>

            </Children>
            <Connection>
              <ConfigKey persist="true">[Deere],show_stacked_waveforms</ConfigKey>
              <BindProperty>visible</BindProperty>
            </Connection>
          </WidgetGroup>

        </Children>
      </WidgetGroup>

      <WidgetGroup>
        <ObjectName>CrossfaderContainer</ObjectName>
        <Layout>horizontal</Layout>
        <Children>
          <WidgetGroup>
            <ObjectName>Crossfader</ObjectName>
            <SizePolicy>me,min</SizePolicy>
            <Layout>horizontal</Layout>
            <Children>
              <SliderComposed>
                <TooltipId>crossfader</TooltipId>
                <SizePolicy>me,min</SizePolicy>
                <MinimumSize>-1,40</MinimumSize>
                <MaximumSize>-1,40</MaximumSize>
                <Slider scalemode="STRETCH">slider-horizontal.svg</Slider>
                <Handle scalemode="STRETCH_ASPECT">handle-horizontal.svg</Handle>
                <Horizontal>true</Horizontal>
                <Connection>
                  <ConfigKey>[Master],crossfader</ConfigKey>
                  <EmitOnDownPress>false</EmitOnDownPress>
                </Connection>
              </SliderComposed>
            </Children>
            <Connection>
              <ConfigKey>[AutoDJ],enabled</ConfigKey>
              <BindProperty>visible</BindProperty>
              <Transform>
                <Not/>
              </Transform>
            </Connection>
          </WidgetGroup>

          <!-- Change crossfader background color if AutoDj is active,
               https://bugs.launchpad.net/mixxx/+bug/995955 -->
          <WidgetGroup>
            <ObjectName>CrossfaderAutoDjActive</ObjectName>
            <SizePolicy>me,min</SizePolicy>
            <Layout>horizontal</Layout>
            <Children>
              <SliderComposed>
                <TooltipId>crossfader</TooltipId>
                <SizePolicy>me,min</SizePolicy>
                <MinimumSize>-1,40</MinimumSize>
                <MaximumSize>-1,40</MaximumSize>
                <Slider scalemode="STRETCH">slider-horizontal.svg</Slider>
                <Handle scalemode="STRETCH_ASPECT">handle-horizontal.svg</Handle>
                <Horizontal>true</Horizontal>
                <Connection>
                  <ConfigKey>[Master],crossfader</ConfigKey>
                  <EmitOnDownPress>false</EmitOnDownPress>
                </Connection>
              </SliderComposed>
            </Children>
            <Connection>
              <ConfigKey>[AutoDJ],enabled</ConfigKey>
              <BindProperty>visible</BindProperty>
            </Connection>
          </WidgetGroup>

          </Children>
          <Connection>
            <ConfigKey>[Deere],hide_crossfader</ConfigKey>
            <BindProperty>visible</BindProperty>
            <Transform>
              <Not/>
            </Transform>
          </Connection>
      </WidgetGroup>

    </Children>
    <Connection>
      <ConfigKey>[Master],hide_mixer</ConfigKey>
      <BindProperty>visible</BindProperty>
      <Transform>
        <Not/>
      </Transform>
    </Connection>
  </WidgetGroup>
</Template>
