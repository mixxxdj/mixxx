                  </Template>
                  <Template src="skin:sampler_bank_controls.xml"/>
                </Children>
              </WidgetGroup>

              <WidgetGroup trigger="[Deere],sampler_bank_2">
                <ObjectName>SampleDecksExpanded</ObjectName>
                <SizePolicy>me,min</SizePolicy>
                <Layout>horizontal</Layout>
                <Children>
