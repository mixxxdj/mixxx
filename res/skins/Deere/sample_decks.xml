                    <SetVariable name="object_name">SampleDeckToggle</SetVariable>
                    <SetVariable name="control">[Samplers],show_samplers</SetVariable>
                  </Template>
                  <Template src="skin:sampler_simple.xml">
                    <SetVariable name="i">13</SetVariable>
                  </Template>
