<!DOCTYPE template>
<!-- Master level meter -->
<Template>
  <WidgetGroup>
    <Layout>vertical</Layout>
    <Children>

      <WidgetGroup>
        <ObjectName>MasterVu2Deck</ObjectName>
        <Layout>vertical</Layout>
        <SizePolicy>min,me</SizePolicy>
        <Children>

          <!-- Spacer to align with top of channels VUs -->
          <WidgetGroup>
            <Size>-1,34f</Size>
            <Layout>vertical</Layout>
            <Children/>
          </WidgetGroup>

          <Template src="skin:vumeter_master.xml"/>

        </Children>
        <Connection>
          <ConfigKey>[Master],show_4decks</ConfigKey>
          <BindProperty>visible</BindProperty>
          <Transform>
            <Not/>
          </Transform>
        </Connection>
      </WidgetGroup><!-- MasterVu2Deck -->

      <WidgetGroup>
        <ObjectName>MasterVu4Deck_Container</ObjectName>
        <Layout>vertical</Layout>
        <SizePolicy>min,me</SizePolicy>
        <Children>

          <!-- There's a spacer & VU configuration for every posible combination
              of split/parallel waveforms, in/visible EQ knob and in/visible
              volume faders -->

          <WidgetGroup><!-- split waveforms -->
            <Layout>vertical</Layout>
            <SizePolicy>min,me</SizePolicy>
            <Children>
              <WidgetGroup><!-- show EQ -->
                <Layout>vertical</Layout>
                <SizePolicy>min,me</SizePolicy>
                <Children>
                  <WidgetGroup><!-- show EQ, show faders -->
                    <SizePolicy>min,me</SizePolicy>
                    <Layout>vertical</Layout>
                    <Children>
                      <WidgetGroup>
                        <ObjectName>MasterVU_Spacer</ObjectName>
                        <Size>10min,0me</Size>
                        <Layout>vertical</Layout>
                        <Children/>
                      </WidgetGroup>

                      <WidgetGroup>
                        <SizePolicy>min,p</SizePolicy>
                        <Layout>vertical</Layout>
                        <Children>
                          <Template src="skin:vumeter_master.xml"/>

                          <Template src="skin:spacer_vx.xml">
                            <SetVariable name="height">10f,136f</SetVariable>
                          </Template>
                        </Children>
                      </WidgetGroup>
                    </Children>
                    <Connection>
                      <ConfigKey>[Master],show_faders</ConfigKey>
                      <BindProperty>visible</BindProperty>
                    </Connection>
                  </WidgetGroup><!-- show EQ, show faders -->

                  <WidgetGroup><!-- show EQ, no faders -->
                    <SizePolicy>min,me</SizePolicy>
                    <Layout>vertical</Layout>
                    <Children>
                      <WidgetGroup>
                        <ObjectName>MasterVU_Spacer</ObjectName>
                        <Size>10min,me</Size>
                        <Layout>vertical</Layout>
                        <Children/>
                      </WidgetGroup>

                      <WidgetGroup>
                        <ObjectName>MasterVU</ObjectName>
                        <Size>10min,me</Size>
                        <Layout>vertical</Layout>
                        <Children>
                          <Template src="skin:vumeter_master.xml"/>
                        </Children>
                      </WidgetGroup>
                    </Children>
                    <Connection>
                      <ConfigKey>[Master],show_faders</ConfigKey>
                      <Transform><Not/></Transform>
                      <BindProperty>visible</BindProperty>
                    </Connection>
                  </WidgetGroup><!-- show EQ, no faders -->
                </Children>
                <Connection>
                  <ConfigKey>[Master],show_eqs</ConfigKey>
                  <BindProperty>visible</BindProperty>
                </Connection>
              </WidgetGroup><!-- show EQ -->

              <WidgetGroup><!-- no EQ -->
                <Layout>vertical</Layout>
                <SizePolicy>min,me</SizePolicy>
                <Children>
                  <WidgetGroup><!-- no EQ, no faders -->
                    <SizePolicy>min,me</SizePolicy>
                    <Layout>vertical</Layout>
                    <Children>
                      <Template src="skin:spacer_vx.xml">
                        <SetVariable name="height">10f,34f</SetVariable>
                      </Template>

                      <Template src="skin:vumeter_master.xml"/>
                    </Children>
                  </WidgetGroup><!-- no EQ, no faders -->

                  <WidgetGroup><!-- no EQ, show faders -->
                    <SizePolicy>min,me</SizePolicy>
                    <Layout>vertical</Layout>
                    <Children>
                    </Children>
                    <Connection>
                      <ConfigKey>[Master],show_faders</ConfigKey>
                      <BindProperty>visible</BindProperty>
                    </Connection>
                  </WidgetGroup><!-- no EQ, show faders -->
                </Children>
                <Connection>
                  <ConfigKey>[Master],show_eqs</ConfigKey>
                  <Transform><Not/></Transform>
                  <BindProperty>visible</BindProperty>
                </Connection>
              </WidgetGroup><!-- no EQ -->
            </Children>
            <Connection>
              <ConfigKey>[Deere],show_parallel_waveforms</ConfigKey>
              <Transform><Not/></Transform>
              <BindProperty>visible</BindProperty>
            </Connection>
          </WidgetGroup><!-- split waveforms -->

          <WidgetGroup><!-- parallel waveforms -->
            <Layout>vertical</Layout>
            <SizePolicy>min,me</SizePolicy>
            <Children>
              <WidgetGroup><!-- show EQ -->
                <SizePolicy>min,me</SizePolicy>
                <Layout>vertical</Layout>
                <Children>
                  <WidgetGroup>
                    <ObjectName>MasterVU_Spacer</ObjectName>
                    <Size>10min,0me</Size>
                    <Layout>vertical</Layout>
                    <Children/>
                  </WidgetGroup>

                  <WidgetGroup>
                    <SizePolicy>min,p</SizePolicy>
                    <Layout>vertical</Layout>
                    <Children>
                      <Template src="skin:vumeter_master.xml"/>

                      <Template src="skin:spacer_vx.xml">
                        <SetVariable name="height">10f,28f</SetVariable>
                      </Template>
                    </Children>
                  </WidgetGroup>
                </Children>
                <Connection>
                  <ConfigKey>[Master],show_eqs</ConfigKey>
                  <BindProperty>visible</BindProperty>
                </Connection>
              </WidgetGroup><!-- show EQ -->

              <WidgetGroup><!-- no EQ -->
                <Layout>vertical</Layout>
                <SizePolicy>min,me</SizePolicy>
                <Children>
                  <WidgetGroup><!-- no EQ, no faders -->
                    <SizePolicy>min,me</SizePolicy>
                    <Layout>vertical</Layout>
                    <Children>
                      <Template src="skin:spacer_vx.xml">
                        <SetVariable name="height">10f,34f</SetVariable>
                      </Template>

                      <Template src="skin:vumeter_master.xml"/>
                    </Children>
                  </WidgetGroup><!-- no EQ, no faders -->

                  <WidgetGroup><!-- no EQ, show faders -->
                    <SizePolicy>min,me</SizePolicy>
                    <Layout>vertical</Layout>
                    <Children>
                    </Children>
                    <Connection>
                      <ConfigKey>[Master],show_faders</ConfigKey>
                      <BindProperty>visible</BindProperty>
                    </Connection>
                  </WidgetGroup><!-- no EQ, show faders -->
                </Children>
                <Connection>
                  <ConfigKey>[Master],show_eqs</ConfigKey>
                  <Transform><Not/></Transform>
                  <BindProperty>visible</BindProperty>
                </Connection>
              </WidgetGroup><!-- no EQ -->
            </Children>
            <Connection>
              <ConfigKey>[Deere],show_parallel_waveforms</ConfigKey>
              <BindProperty>visible</BindProperty>
            </Connection>
          </WidgetGroup><!-- parallel waveforms -->

        </Children>
        <Connection>
          <ConfigKey>[Master],show_4decks</ConfigKey>
          <BindProperty>visible</BindProperty>
        </Connection>
      </WidgetGroup><!-- MasterVu4Deck -->

    </Children>
  </WidgetGroup>
</Template>
