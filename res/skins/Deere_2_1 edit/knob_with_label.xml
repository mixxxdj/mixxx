<!DOCTYPE template>
<!--
  Description:
    A standard knob.
  Variables:
    control: The control to connect to.
-->
<Template>
  <WidgetGroup>
    <MinimumSize>40,42</MinimumSize>
    <MaximumSize>40,45</MaximumSize>
    <Layout>vertical</Layout>
    <Children>
      <Template src="skin:knob.xml"/>
      <Label>
        <Size>40f,10f</Size>
        <ObjectName>KnobLabel</ObjectName>
        <Text><Variable name="label"/></Text>
      </Label>
    </Children>
  </WidgetGroup>
</Template>
