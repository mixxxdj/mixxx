<!DOCTYPE template>

<Template>

	<WidgetGroup>
	<ObjectName>SmallDecksOptions</ObjectName>
	<MinimumSize>me,30</MinimumSize>
	<SizePolicy>me,f</SizePolicy>
	<Layout>horizontal</Layout>
	<Children>
	
	<!-- Texts -->
	<WidgetGroup>
	<ObjectName>Texts</ObjectName>	
	<MinimumSize>75,30</MinimumSize>
	<SizePolicy>f,f</SizePolicy>
	<Layout>vertical</Layout>
	<Children>
	<Label>
	<Style>font:10px/12px; background:transparent; color:#787878;</Style>
	<Text>Small Decks</Text>
	</Label>
	</Children>			
	</WidgetGroup>
	
	<!-- Button: Show/Hide this Row -->
	<PushButton>
	<Tooltip>Close</Tooltip><!-- Tooltip -->		
	<NumberStates>2</NumberStates>
	<State>
	<Number>0</Number>
	<Pressed>skin:graphics/btn_view1.svg</Pressed>
	<Unpressed>skin:graphics/btn_view1.svg</Unpressed>
	</State>
	<State>
	<Number>1</Number>
	<Pressed>skin:graphics/btn_view1_pressed.svg</Pressed>
	<Unpressed>skin:graphics/btn_view1_pressed.svg</Unpressed>
	</State>		
	<Connection>
	<ConfigKey>[SmallDecks],show</ConfigKey>
	</Connection>
	</PushButton>

	<!-- Button: Minimize/Maximize this Row -->
	<PushButton>
	<Tooltip>Maximize</Tooltip><!-- Tooltip -->	
	<NumberStates>2</NumberStates>
	<State>
	<Number>0</Number>
	<Pressed>skin:graphics/btn_row_maximize.svg</Pressed>
	<Unpressed>skin:graphics/btn_row_maximize.svg</Unpressed>
	</State>
	<State>
	<Number>1</Number>
	<Pressed>skin:graphics/btn_row_minimize.svg</Pressed>
	<Unpressed>skin:graphics/btn_row_minimize.svg</Unpressed>
	</State>		
	<Connection>
	<ConfigKey>[SmallDecksMaximize],show</ConfigKey>
	</Connection>
	</PushButton>
	
	<!-- 1st Row - Button: Show/Hide Small Deck Module -->	
	<PushButton>
	<Tooltip>Decks 1 and 2</Tooltip><!-- Tooltip -->
	<NumberStates>2</NumberStates>
	<State>
	<Number>0</Number>
	<Pressed>skin:graphics/btn_view.svg</Pressed>
	<Unpressed>skin:graphics/btn_view.svg</Unpressed>
	</State>
	<State>
	<Number>1</Number>
	<Pressed>skin:graphics/btn_view_pressed.svg</Pressed>
	<Unpressed>skin:graphics/btn_view_pressed.svg</Unpressed>
	</State>		
	<Connection>
	<ConfigKey>[SmallModule1],show</ConfigKey>
	</Connection>	
	</PushButton>

	<!-- 2nd Row - Button: Show/Hide Small Deck Module -->	
	<PushButton>
	<Tooltip>Decks 3 and 4</Tooltip><!-- Tooltip -->
	<NumberStates>2</NumberStates>
	<State>
	<Number>0</Number>
	<Pressed>skin:graphics/btn_view.svg</Pressed>
	<Unpressed>skin:graphics/btn_view.svg</Unpressed>
	</State>
	<State>
	<Number>1</Number>
	<Pressed>skin:graphics/btn_view_pressed.svg</Pressed>
	<Unpressed>skin:graphics/btn_view_pressed.svg</Unpressed>
	</State>		
	<Connection>
	<ConfigKey>[SmallModule2],show</ConfigKey>
	</Connection>	
	</PushButton>

	
	</Children>
	</WidgetGroup>
	
</Template>
