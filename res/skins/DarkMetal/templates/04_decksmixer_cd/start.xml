<!DOCTYPE template>

<Template>	
	
	<!-- WIDGETGROUP: -->	
	<WidgetGroup>
	<ObjectName>DecksAndMixerRack2</ObjectName>
	<Pos>0,0</Pos>
	<MinimumSize>1,300</MinimumSize>
	<SizePolicy>me,f</SizePolicy>
	<Layout>horizontal</Layout>
	<Children>	
	<!-- WIDGETGROUP: Deck -->			  
    <Template src="skin:templates/04_decksmixer_cd/deck_left.xml">
	<SetVariable name="audiochannel">3</SetVariable>
	<SetVariable name="decktohide">4</SetVariable>
	</Template>
	<!-- WIDGETGROUP: Mixer Panel -->
	<Template src="skin:templates/04_decksmixer_cd/mixer.xml">
	<SetVariable name="audiochannel_a">3</SetVariable>
	<SetVariable name="audiochannel_b">4</SetVariable>	
	</Template>	
	<!-- WIDGETGROUP: Deck -->	
	<Template src="skin:templates/04_decksmixer_cd/deck_right.xml">
	<SetVariable name="audiochannel">4</SetVariable>
	<SetVariable name="decktohide">3</SetVariable>
	</Template>
	</Children>
	<Connection>
	<ConfigKey>[DarkMetal],decks_and_mixer_rack2_show</ConfigKey>
	<BindProperty>visible</BindProperty>
	</Connection>
	</WidgetGroup>
	
</Template>