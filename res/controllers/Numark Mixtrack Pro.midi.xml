    <settings>
        <group label="Alternative Mapping">
            <option
                variable="numarkMixTrackPro_brakeEnabled"
                type="boolean"
                default="false"
                label='Play/Pause performs Brake and Soft Start if "SCRATCH LED" is on. [Require Mixxx v.2.6+]'>
                <description>
                    Brake and Soft Start, at Play / Pause if "scratch LED" is on.
                </description>
            </option>
            <option
                variable="numarkMixTrackPro_editLoopByWheelEnabled"
                type="boolean"
                default="true"
                label='Edit Loop by Touch-Wheel.'>
                <description>
                    If "scratch LED" is off and Loop is active, touch the top of the Wheel, then rotate
                    forward for starting the editing of LoopIN or rotate backward for LoopOUT point.
                </description>
            </option>
            <option
                variable="numarkMixTrackPro_meanPitchBendBtns"
                type="enum"
                label="PITCH BEND buttons">
                <value label="Rate temp up/down (already available by external wheel)">rate_temp</value>
                <value label="Beat jump" default="true">beatjump</value>
                <value label="Pitch-Key up/down">pitch</value>
                <description>Assaign function to "PITCH BEND" buttons.</description>
            </option>
        </group>
        <group label="Activator for Quick Effect Super knob">
            <option
                variable="numarkMixTrackPro_quickFxActivator"
                type="enum"
                label="Quick Effect Super knob on MID knob with">
                <value label="None (disabled)"></value>
                <value label="CUE (PFL)" default="true">cue</value>
                <value label="SHIFT (VIEW / TICK / DELETE)">shift</value>
                <value label="EFFECT">effect</value>
                <description>Active Quick Effect Super knob (filter is the default) on MID knob when
                    this modifier is on and the relative LED is on.</description>
            </option>
            <row orientation="vertical">
            </row>
        </group>
        <group label="Parameters">
            <option
                variable="numarkMixTrackPro_scratchSensibility"
                type="integer"
                label="Scratch Sensibility (default 600)"
                default="600"
                >
            </option>
        </group>
    </settings>
