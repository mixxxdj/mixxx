<!DOCTYPE template>
<!--
  Description:
    A standard knob.
  Variables:
    control: The control to connect to.
-->
<Template>
  <WidgetGroup>
    <Layout>horizontal</Layout>
    <Children>
      <KnobComposed>
        <TooltipId><Variable name="TooltipId"/></TooltipId>
        <Size>34f,28f</Size>
        <Knob>knob_toolbar.svg</Knob>
        <BackPath>knob_bg_<Variable name="color"/>.svg</BackPath>
        <MinAngle>-135</MinAngle>
        <MaxAngle>135</MaxAngle>
        <KnobCenterYOffset>1.32</KnobCenterYOffset>
        <Connection>
          <ConfigKey><Variable name="group"/>,<Variable name="control"/></ConfigKey>
        </Connection>
      </KnobComposed>
      <Label>
        <Size><Variable name="label_width"/>,10f</Size>
        <ObjectName>KnobLabelH</ObjectName>
        <Text><Variable name="label"/></Text>
        <Alignment>left</Alignment>
      </Label>
    </Children>
  </WidgetGroup>
</Template>
